Dialogue: 0,0:00:26.39,0:00:27.66,JP,,0,0,0,,	何
Dialogue: 0,0:00:28.01,0:00:28.88,JP,,0,0,0,,	もち蔵
Dialogue: 0,0:00:30.13,0:00:30.90,JP,,0,0,0,,	何だよ
Dialogue: 0,0:00:31.59,0:00:32.66,JP,,0,0,0,,	プール行く
Dialogue: 0,0:00:32.83,0:00:34.07,JP,,0,0,0,,	ちょっとたまこ
Dialogue: 0,0:00:34.23,0:00:35.34,JP,,0,0,0,,	何
Dialogue: 0,0:00:35.63,0:00:39.60,JP,,0,0,0,,	男子誘ってどうするの 水着になるんだよ 私たち
Dialogue: 0,0:00:39.84,0:00:40.93,JP,,0,0,0,,	それはまずい
Dialogue: 0,0:00:41.32,0:00:43.30,JP,,0,0,0,,	たまちゃん いやらしい子だね
Dialogue: 0,0:00:43.83,0:00:45.03,JP,,0,0,0,,	行かねえよ
Dialogue: 0,0:00:45.41,0:00:47.06,JP,,0,0,0,,	そうか じゃね
Dialogue: 0,0:00:52.16,0:00:53.59,JP,,0,0,0,,	宿題やれ
Dialogue: 0,0:00:54.13,0:00:55.60,JP,,0,0,0,,	痛ぇな
Dialogue: 0,0:00:56.49,0:00:59.19,JP,,0,0,0,,	来る夏 沸き立つ心
Dialogue: 0,0:00:59.75,0:01:02.67,JP,,0,0,0,,	あの子の思いは今いずこ
Dialogue: 0,0:02:35.76,0:02:37.21,JP,,0,0,0,,	遅いね しおりちゃん
Dialogue: 0,0:02:38.58,0:02:39.71,JP,,0,0,0,,	お待たせ
Dialogue: 0,0:02:40.07,0:02:41.37,JP,,0,0,0,,	遅れてごめんなさい
Dialogue: 0,0:02:41.69,0:02:42.58,JP,,0,0,0,,	寝坊した
Dialogue: 0,0:02:42.82,0:02:44.78,JP,,0,0,0,,	ううん 水着忘れて
Dialogue: 0,0:02:45.34,0:02:47.67,JP,,0,0,0,,	そのまま来ちゃうと思ったんだけど
Dialogue: 0,0:02:48.03,0:02:49.53,JP,,0,0,0,,	そりゃ戻っちゃうね
Dialogue: 0,0:02:49.93,0:02:51.68,JP,,0,0,0,,	プール来る意味なくなるものね
Dialogue: 0,0:02:57.43,0:03:00.93,JP,,0,0,0,,	右 左 右 左 右
Dialogue: 0,0:03:01.09,0:03:03.26,JP,,0,0,0,,	ほらほら 腰曲がってるよ
Dialogue: 0,0:03:03.57,0:03:05.70,JP,,0,0,0,,	たまこ 泳げなかったんだ
Dialogue: 0,0:03:07.02,0:03:08.70,JP,,0,0,0,,	頑張って たまこ
Dialogue: 0,0:03:09.28,0:03:10.73,JP,,0,0,0,,	ダメかも
Dialogue: 0,0:03:10.96,0:03:13.59,JP,,0,0,0,,	じゃ 手放すから一人で泳いでごらん
Dialogue: 0,0:03:13.59,0:03:15.49,JP,,0,0,0,,	あれ みどりちゃん
Dialogue: 0,0:03:15.49,0:03:17.98,JP,,0,0,0,,	もう あさって臨海学校なんだよ
Dialogue: 0,0:03:18.37,0:03:20.40,JP,,0,0,0,,	はい 頑張る 頑張れ
Dialogue: 0,0:03:26.16,0:03:27.06,JP,,0,0,0,,	たまこ
Dialogue: 0,0:03:27.18,0:03:28.46,JP,,0,0,0,,	信じられない
Dialogue: 0,0:03:28.79,0:03:30.70,JP,,0,0,0,,	1ミリも進めてない
Dialogue: 0,0:03:32.48,0:03:33.35,JP,,0,0,0,,	いけた
Dialogue: 0,0:03:35.25,0:03:37.59,JP,,0,0,0,,	結構いけたね 今回のはね
Dialogue: 0,0:03:38.15,0:03:41.41,JP,,0,0,0,,	たまこ 小学校の頃水泳何級だったっけ
Dialogue: 0,0:03:41.68,0:03:42.73,JP,,0,0,0,,	13級
Dialogue: 0,0:03:42.83,0:03:44.96,JP,,0,0,0,,	水に10秒顔が付けられる
Dialogue: 0,0:03:45.24,0:03:46.55,JP,,0,0,0,,	だよね
Dialogue: 0,0:03:46.55,0:03:50.49,JP,,0,0,0,,	12級の水中じゃんけんができなかったのたまこだけだもん
Dialogue: 0,0:03:50.84,0:03:53.64,JP,,0,0,0,,	だって怖いんだもん 息できないし
Dialogue: 0,0:03:53.97,0:03:55.79,JP,,0,0,0,,	だから 息継ぎするんでしょう
Dialogue: 0,0:03:56.30,0:03:58.13,JP,,0,0,0,,	もち蔵みたいなこと言うね
Dialogue: 0,0:03:59.00,0:04:00.52,JP,,0,0,0,,	大路が いつ
Dialogue: 0,0:04:01.00,0:04:03.38,JP,,0,0,0,,	忘れたよ 辛い思い出だよ
Dialogue: 0,0:04:05.91,0:04:07.67,JP,,0,0,0,,	玉ちゃん 退いて
Dialogue: 0,0:04:11.50,0:04:12.46,JP,,0,0,0,,	かんなちゃん
Dialogue: 0,0:04:12.50,0:04:13.66,JP,,0,0,0,,	沈んだ
Dialogue: 0,0:04:17.33,0:04:18.29,JP,,0,0,0,,	かんな
Dialogue: 0,0:04:18.48,0:04:19.53,JP,,0,0,0,,	溺れる
Dialogue: 0,0:04:19.89,0:04:21.02,JP,,0,0,0,,	金槌
Dialogue: 0,0:04:24.62,0:04:26.09,JP,,0,0,0,,	痛ぇな
Dialogue: 0,0:04:26.09,0:04:28.16,JP,,0,0,0,,	食事中にぼーっとしない
Dialogue: 0,0:04:28.54,0:04:30.50,JP,,0,0,0,,	大事なこと考えてるんだよ
Dialogue: 0,0:04:30.86,0:04:32.60,JP,,0,0,0,,	大事なこと 何だ
Dialogue: 0,0:04:34.38,0:04:35.19,JP,,0,0,0,,	別に
Dialogue: 0,0:04:35.51,0:04:37.39,JP,,0,0,0,,	どうせたまこちゃんのことでしょう
Dialogue: 0,0:04:38.31,0:04:39.16,JP,,0,0,0,,	何だ
Dialogue: 0,0:04:39.16,0:04:41.01,JP,,0,0,0,,	ちげぇよ
Dialogue: 0,0:04:44.19,0:04:45.08,JP,,0,0,0,,	ご馳走様
Dialogue: 0,0:04:52.10,0:04:53.15,JP,,0,0,0,,	まったく
Dialogue: 0,0:04:56.97,0:04:59.09,JP,,0,0,0,,	やっぱり行けばよかったな
Dialogue: 0,0:04:59.85,0:05:02.05,JP,,0,0,0,,	行き先市民プールだよな
Dialogue: 0,0:05:07.57,0:05:09.15,JP,,0,0,0,,	もち蔵
Dialogue: 0,0:05:09.97,0:05:12.14,JP,,0,0,0,,	たまこ いたのか
Dialogue: 0,0:05:12.14,0:05:12.82,JP,,0,0,0,,	うん
Dialogue: 0,0:05:13.12,0:05:16.28,JP,,0,0,0,,	ねえ 一緒に遊ぼう
Dialogue: 0,0:05:17.74,0:05:18.99,JP,,0,0,0,,	い いいよ
Dialogue: 0,0:05:19.38,0:05:22.50,JP,,0,0,0,,	別にそんなんで来たんじゃねえし
Dialogue: 0,0:05:23.24,0:05:24.34,JP,,0,0,0,,	あ そっか
Dialogue: 0,0:05:24.76,0:05:27.28,JP,,0,0,0,,	って言うよな 俺絶対
Dialogue: 0,0:05:32.16,0:05:33.20,JP,,0,0,0,,	青年よ
Dialogue: 0,0:05:33.61,0:05:35.27,JP,,0,0,0,,	な 何だ お前
Dialogue: 0,0:05:35.29,0:05:36.58,JP,,0,0,0,,	「お前」ではない
Dialogue: 0,0:05:36.77,0:05:39.31,JP,,0,0,0,,	私の名はデラモチマッヅィ
Dialogue: 0,0:05:39.55,0:05:41.34,JP,,0,0,0,,	由緒正しき王家の...
Dialogue: 0,0:05:41.34,0:05:42.87,JP,,0,0,0,,	もう十分知ってるよ
Dialogue: 0,0:05:42.87,0:05:44.13,JP,,0,0,0,,	勝手に入ってくんな
Dialogue: 0,0:05:44.48,0:05:46.51,JP,,0,0,0,,	お前が招き入れたのであろう
Dialogue: 0,0:05:46.91,0:05:49.23,JP,,0,0,0,,	ほら その扉に歓迎の鐘が
Dialogue: 0,0:05:50.36,0:05:53.77,JP,,0,0,0,,	あの鐘は歓迎の宴が催されるという印
Dialogue: 0,0:05:54.09,0:05:56.13,JP,,0,0,0,,	ここに来てすでに半年と過ごし
Dialogue: 0,0:05:56.59,0:05:59.48,JP,,0,0,0,,	宴を開くにはやや遅すぎる気もするが
Dialogue: 0,0:05:59.79,0:06:03.13,JP,,0,0,0,,	歓迎したいと言うのであれば吝かではない
Dialogue: 0,0:06:03.13,0:06:05.77,JP,,0,0,0,,	ここは日本で あれは「風鈴」ってもんだ
Dialogue: 0,0:06:06.02,0:06:07.88,JP,,0,0,0,,	宴も何も開かれねえよ
Dialogue: 0,0:06:08.07,0:06:10.14,JP,,0,0,0,,	何だと 紛らわしいな
Dialogue: 0,0:06:10.14,0:06:11.81,JP,,0,0,0,,	紛らわしいのはどっちだ
Dialogue: 0,0:06:12.33,0:06:13.03,JP,,0,0,0,,	まあ いい
Dialogue: 0,0:06:13.03,0:06:15.20,JP,,0,0,0,,	だったらお前の悩みを聞いてやろう
Dialogue: 0,0:06:15.51,0:06:16.29,JP,,0,0,0,,	はあ
Dialogue: 0,0:06:16.64,0:06:17.96,JP,,0,0,0,,	悩んでいるのだろう
Dialogue: 0,0:06:20.82,0:06:22.36,JP,,0,0,0,,	いつからここにいた
Dialogue: 0,0:06:22.62,0:06:24.75,JP,,0,0,0,,	ねえ 一緒に遊ばない
Dialogue: 0,0:06:25.59,0:06:27.20,JP,,0,0,0,,	い いいよ
Dialogue: 0,0:06:27.28,0:06:29.68,JP,,0,0,0,,	別にそんなんで来たんじゃねえし
Dialogue: 0,0:06:30.32,0:06:31.74,JP,,0,0,0,,	のあたりかな
Dialogue: 0,0:06:31.74,0:06:32.88,JP,,0,0,0,,	聞いてたのかよ
Dialogue: 0,0:06:32.89,0:06:34.89,JP,,0,0,0,,	お前が勝手に喋っていたのだろう
Dialogue: 0,0:06:35.96,0:06:38.07,JP,,0,0,0,,	鳥類には関係ないことだよ
Dialogue: 0,0:06:38.47,0:06:39.30,JP,,0,0,0,,	いいから
Dialogue: 0,0:06:39.30,0:06:39.96,JP,,0,0,0,,	ラブか
Dialogue: 0,0:06:40.85,0:06:43.93,JP,,0,0,0,,	青年よ お前 わかりやすいな
Dialogue: 0,0:06:44.32,0:06:45.38,JP,,0,0,0,,	うるせえ
Dialogue: 0,0:06:45.38,0:06:47.28,JP,,0,0,0,,	恋焦がれる乙女は誰だ
Dialogue: 0,0:06:47.47,0:06:48.40,JP,,0,0,0,,	おい 言ってみろ
Dialogue: 0,0:06:48.40,0:06:49.37,JP,,0,0,0,,	しおりさんか
Dialogue: 0,0:06:49.79,0:06:51.12,JP,,0,0,0,,	彼女は駄目だぞ
Dialogue: 0,0:06:51.20,0:06:52.26,JP,,0,0,0,,	ちげぇ
Dialogue: 0,0:06:52.46,0:06:54.15,JP,,0,0,0,,	なら 花屋の店主か
Dialogue: 0,0:06:54.29,0:06:57.27,JP,,0,0,0,,	あれはやめておけ お前には美しすぎる
Dialogue: 0,0:06:57.57,0:06:59.49,JP,,0,0,0,,	だから 違うって言ってんだろう
Dialogue: 0,0:06:59.80,0:07:01.11,JP,,0,0,0,,	なら 娘か
Dialogue: 0,0:07:03.23,0:07:04.30,JP,,0,0,0,,	ち ちげぇよ
Dialogue: 0,0:07:04.57,0:07:05.62,JP,,0,0,0,,	青年よ
Dialogue: 0,0:07:05.97,0:07:08.06,JP,,0,0,0,,	お前 わかりやすいな
Dialogue: 0,0:07:08.35,0:07:10.04,JP,,0,0,0,,	いいから 帰れよ
Dialogue: 0,0:07:10.20,0:07:11.76,JP,,0,0,0,,	娘とはな
Dialogue: 0,0:07:12.05,0:07:15.37,JP,,0,0,0,,	この距離に住んでいながら思いを告げずにいるとは
Dialogue: 0,0:07:15.76,0:07:17.25,JP,,0,0,0,,	それでも男か
Dialogue: 0,0:07:17.34,0:07:18.43,JP,,0,0,0,,	うるせえな
Dialogue: 0,0:07:18.58,0:07:21.66,JP,,0,0,0,,	告げようとはしてるよ 去年も一昨年も
Dialogue: 0,0:07:22.06,0:07:24.60,JP,,0,0,0,,	でも たまこのやつ全然気づかなっ
Dialogue: 0,0:07:25.71,0:07:26.82,JP,,0,0,0,,	やはり そうか
Dialogue: 0,0:07:27.29,0:07:29.07,JP,,0,0,0,,	う うるせえ
Dialogue: 0,0:07:29.38,0:07:31.77,JP,,0,0,0,,	やむをえん これも何かの縁
Dialogue: 0,0:07:32.24,0:07:37.29,JP,,0,0,0,,	祖国では数々の女性と浮き名を流してきたこの私が協力してやろう
Dialogue: 0,0:07:37.77,0:07:41.27,JP,,0,0,0,,	そもそもあの娘にはすでに一度求愛されている
Dialogue: 0,0:07:41.42,0:07:43.24,JP,,0,0,0,,	たまこがお前に
Dialogue: 0,0:07:43.49,0:07:47.94,JP,,0,0,0,,	安心しろ 私は高貴な身 丁重に断りを入れた
Dialogue: 0,0:07:48.69,0:07:50.44,JP,,0,0,0,,	かなり悲しんでいたかな
Dialogue: 0,0:07:50.83,0:07:54.20,JP,,0,0,0,,	故に娘の気持ちは手に取るようにわかる
Dialogue: 0,0:07:54.78,0:07:56.34,JP,,0,0,0,,	嘘も大概にしろよ
Dialogue: 0,0:07:56.56,0:07:59.12,JP,,0,0,0,,	うそだと思うのであればそう思うがいい
Dialogue: 0,0:07:59.81,0:08:03.10,JP,,0,0,0,,	せっかく同じ男として手を貸してやろうとしたものを
Dialogue: 0,0:08:03.63,0:08:04.67,JP,,0,0,0,,	さらばだ
Dialogue: 0,0:08:06.95,0:08:07.60,JP,,0,0,0,,	待って
Dialogue: 0,0:08:07.60,0:08:08.14,JP,,0,0,0,,	あれ
Dialogue: 0,0:08:13.10,0:08:15.39,JP,,0,0,0,,	あんこも大分焼けてきたな
Dialogue: 0,0:08:16.57,0:08:18.85,JP,,0,0,0,,	日焼け止め塗ってるのに
Dialogue: 0,0:08:19.21,0:08:20.66,JP,,0,0,0,,	あんこもおいで
Dialogue: 0,0:08:23.08,0:08:25.38,JP,,0,0,0,,	息継ぎすればいいんだよ
Dialogue: 0,0:08:25.77,0:08:26.93,JP,,0,0,0,,	寝言か
Dialogue: 0,0:08:27.56,0:08:29.71,JP,,0,0,0,,	タオルケット掛けてやりなさい
Dialogue: 0,0:08:30.32,0:08:31.45,JP,,0,0,0,,	は～い
Dialogue: 0,0:08:32.40,0:08:33.91,JP,,0,0,0,,	こんな わかるか
Dialogue: 0,0:08:34.02,0:08:37.89,JP,,0,0,0,,	そうやれ こうだぞ この角度が重要だぞ
Dialogue: 0,0:08:38.14,0:08:40.02,JP,,0,0,0,,	ここに女は惚れるのだ
Dialogue: 0,0:08:40.72,0:08:41.84,JP,,0,0,0,,	あのな
Dialogue: 0,0:08:42.19,0:08:43.59,JP,,0,0,0,,	やるわけねえだろ
Dialogue: 0,0:08:49.93,0:08:54.01,JP,,0,0,0,,	遠泳か プールと海ってやっぱ別物だよね
Dialogue: 0,0:08:54.41,0:08:55.58,JP,,0,0,0,,	ドキドキする
Dialogue: 0,0:08:56.02,0:08:57.04,JP,,0,0,0,,	元気出して
Dialogue: 0,0:08:57.33,0:08:58.57,JP,,0,0,0,,	泳ぎだけだから
Dialogue: 0,0:08:58.73,0:09:01.11,JP,,0,0,0,,	それ以外は楽しいことばかりだから
Dialogue: 0,0:09:01.34,0:09:02.25,JP,,0,0,0,,	だよね
Dialogue: 0,0:09:02.73,0:09:05.45,JP,,0,0,0,,	よし じゃあ今晩のことを考えて
Dialogue: 0,0:09:05.87,0:09:06.72,JP,,0,0,0,,	お餅
Dialogue: 0,0:09:06.72,0:09:07.96,JP,,0,0,0,,	うん そうだよ
Dialogue: 0,0:09:08.20,0:09:10.29,JP,,0,0,0,,	キャンプファイアの時に焼くんだ
Dialogue: 0,0:09:10.76,0:09:12.21,JP,,0,0,0,,	みんなの分もあるからね
Dialogue: 0,0:09:13.27,0:09:14.12,JP,,0,0,0,,	美味しそう
Dialogue: 0,0:09:14.12,0:09:14.72,JP,,0,0,0,,	はい
Dialogue: 0,0:09:14.80,0:09:16.34,JP,,0,0,0,,	さすがの玉ちゃんだ
Dialogue: 0,0:09:17.09,0:09:19.13,JP,,0,0,0,,	夏にお餅は重たいけどね
Dialogue: 0,0:09:19.46,0:09:22.34,JP,,0,0,0,,	そんなことないよ 夏でも大丈夫だよ
Dialogue: 0,0:09:22.87,0:09:25.74,JP,,0,0,0,,	ほら 宇治金時の上にも乗ってるでしょう
Dialogue: 0,0:09:25.88,0:09:27.59,JP,,0,0,0,,	あれは白玉でしょう
Dialogue: 0,0:09:27.80,0:09:29.22,JP,,0,0,0,,	お餅でもいいでしょう
Dialogue: 0,0:09:29.57,0:09:31.49,JP,,0,0,0,,	お餅だと硬くならない
Dialogue: 0,0:09:31.60,0:09:33.05,JP,,0,0,0,,	じゃあ 暖めて
Dialogue: 0,0:09:33.37,0:09:34.70,JP,,0,0,0,,	氷解けちゃうけど
Dialogue: 0,0:09:35.07,0:09:37.29,JP,,0,0,0,,	でも それはそれで美味しそう
Dialogue: 0,0:09:38.02,0:09:38.57,JP,,0,0,0,,	うん
Dialogue: 0,0:09:38.82,0:09:40.33,JP,,0,0,0,,	深いな お餅
Dialogue: 0,0:09:40.53,0:09:41.50,JP,,0,0,0,,	だね
Dialogue: 0,0:09:44.03,0:09:46.61,JP,,0,0,0,,	おい こんなところに押し込めとくつもりか
Dialogue: 0,0:09:46.64,0:09:48.28,JP,,0,0,0,,	いいから 入ってろ
Dialogue: 0,0:09:48.63,0:09:51.24,JP,,0,0,0,,	それより本当に大丈夫なんだろうな
Dialogue: 0,0:09:51.54,0:09:56.64,JP,,0,0,0,,	安心しろ 俺に任せておけば恋の成就などいとも容易いことだ
Dialogue: 0,0:09:57.11,0:10:01.01,JP,,0,0,0,,	それより 本当にここに入っていればビーチに辿り着けるのだろうな
Dialogue: 0,0:10:01.39,0:10:05.61,JP,,0,0,0,,	はい じゃあ出席番号順に並んで座っていけ
Dialogue: 0,0:10:06.34,0:10:08.39,JP,,0,0,0,,	よし 静かにしてろよ
Dialogue: 0,0:10:08.39,0:10:09.33,JP,,0,0,0,,	こら
Dialogue: 0,0:10:09.48,0:10:11.22,JP,,0,0,0,,	出せ
Dialogue: 0,0:10:19.04,0:10:20.54,JP,,0,0,0,,	二段ベッドいいね
Dialogue: 0,0:10:24.87,0:10:26.15,JP,,0,0,0,,	あれ かんなちゃん
Dialogue: 0,0:10:26.61,0:10:28.75,JP,,0,0,0,,	かんなやる気満々だね
Dialogue: 0,0:10:29.03,0:10:30.55,JP,,0,0,0,,	泳ぐのは明日でしょう
Dialogue: 0,0:10:31.27,0:10:33.42,JP,,0,0,0,,	私遠泳好きだから
Dialogue: 0,0:10:38.72,0:10:40.04,JP,,0,0,0,,	おい 大丈夫か
Dialogue: 0,0:10:41.36,0:10:44.50,JP,,0,0,0,,	目が回る 気持ち悪い
Dialogue: 0,0:10:44.57,0:10:45.93,JP,,0,0,0,,	ほら 海だぞ
Dialogue: 0,0:10:47.91,0:10:51.23,JP,,0,0,0,,	海よ 懐かしき潮の香りよ
Dialogue: 0,0:10:51.23,0:10:54.04,JP,,0,0,0,,	鳥が乗り物酔いするって初めて知ったよ
Dialogue: 0,0:10:55.37,0:10:56.73,JP,,0,0,0,,	おい 吐くなよ
Dialogue: 0,0:10:56.93,0:10:58.47,JP,,0,0,0,,	やむをえん
Dialogue: 0,0:10:58.47,0:11:00.45,JP,,0,0,0,,	海は体調が戻ってからにして
Dialogue: 0,0:11:01.36,0:11:03.83,JP,,0,0,0,,	青年よ 文は用意したか
Dialogue: 0,0:11:04.15,0:11:05.05,JP,,0,0,0,,	文
Dialogue: 0,0:11:05.61,0:11:07.27,JP,,0,0,0,,	うん 一応書いたよ
Dialogue: 0,0:11:07.45,0:11:08.60,JP,,0,0,0,,	よし 読んでみろ
Dialogue: 0,0:11:08.60,0:11:09.38,JP,,0,0,0,,	ここでか
Dialogue: 0,0:11:10.80,0:11:13.85,JP,,0,0,0,,	えーと ちょっと話したいことがあるから
Dialogue: 0,0:11:14.13,0:11:16.51,JP,,0,0,0,,	今日の夜 外に来てくれないか
Dialogue: 0,0:11:16.63,0:11:18.87,JP,,0,0,0,,	何だ その味気ない文は
Dialogue: 0,0:11:19.43,0:11:20.21,JP,,0,0,0,,	まあいい
Dialogue: 0,0:11:20.51,0:11:22.57,JP,,0,0,0,,	求愛の練習はしてきたのだろうな
Dialogue: 0,0:11:23.07,0:11:25.38,JP,,0,0,0,,	こうだぞ ここの角度
Dialogue: 0,0:11:25.38,0:11:27.42,JP,,0,0,0,,	だから やんねえって言ってんだろう
Dialogue: 0,0:11:27.54,0:11:28.38,JP,,0,0,0,,	デラちゃん
Dialogue: 0,0:11:28.64,0:11:29.59,JP,,0,0,0,,	常盤
Dialogue: 0,0:11:30.23,0:11:32.43,JP,,0,0,0,,	なんでデラちゃんがこんなところにいるの
Dialogue: 0,0:11:32.43,0:11:34.52,JP,,0,0,0,,	おおっ 娘の友か
Dialogue: 0,0:11:34.52,0:11:37.11,JP,,0,0,0,,	やー この青年が娘に恋...
Dialogue: 0,0:11:37.11,0:11:38.89,JP,,0,0,0,,	いや 何でもない
Dialogue: 0,0:11:41.78,0:11:42.66,JP,,0,0,0,,	これは
Dialogue: 0,0:11:42.90,0:11:44.95,JP,,0,0,0,,	いや 何でもないよ
Dialogue: 0,0:11:45.80,0:11:47.73,JP,,0,0,0,,	おい 早く届けてくれ
Dialogue: 0,0:11:48.07,0:11:49.99,JP,,0,0,0,,	ったく 面倒なやつだ
Dialogue: 0,0:11:50.37,0:11:52.96,JP,,0,0,0,,	お前が届けてくれるって言うから書いたんだろう
Dialogue: 0,0:11:52.96,0:11:55.98,JP,,0,0,0,,	大体 女子の宿舎に男子は入れないんだよ
Dialogue: 0,0:11:56.08,0:11:57.24,JP,,0,0,0,,	いいから 行け
Dialogue: 0,0:12:00.37,0:12:01.99,JP,,0,0,0,,	あれ?
Dialogue: 0,0:12:02.77,0:12:05.73,JP,,0,0,0,,	えっと 娘はどこかな 娘は
Dialogue: 0,0:12:06.25,0:12:08.79,JP,,0,0,0,,	おい 娘 ここにいたか
Dialogue: 0,0:12:07.66,0:12:09.05,JP,,0,0,0,,{\pos(640,80)}みどりちゃん 来たんだ
Dialogue: 0,0:12:09.24,0:12:10.67,JP,,0,0,0,,	おい 娘
Dialogue: 0,0:12:15.06,0:12:17.99,JP,,0,0,0,,	ねぇ 今 デラちゃんの声聞こえなかった?
Dialogue: 0,0:12:18.77,0:12:21.30,JP,,0,0,0,,	そう 聞こえなかったけど
Dialogue: 0,0:12:25.53,0:12:26.31,JP,,0,0,0,,	常盤
Dialogue: 0,0:12:31.69,0:12:33.63,JP,,0,0,0,,	なんだ あいつ
Dialogue: 0,0:12:42.33,0:12:46.11,JP,,0,0,0,,	こうして暗闇で目を閉じ 波の音を聞いていると
Dialogue: 0,0:12:46.36,0:12:48.20,JP,,0,0,0,,	祖国のことを思い出される
Dialogue: 0,0:12:49.19,0:12:51.26,JP,,0,0,0,,	王子よ 俺は必ず...
Dialogue: 0,0:12:58.14,0:12:59.14,JP,,0,0,0,,	なにやつ
Dialogue: 0,0:13:01.69,0:13:03.80,JP,,0,0,0,,	なんか溶接できそうな感じ
Dialogue: 0,0:13:04.18,0:13:06.05,JP,,0,0,0,,	たまこ もう食べられる?
Dialogue: 0,0:13:06.41,0:13:07.66,JP,,0,0,0,,	もうちょっとかな
Dialogue: 0,0:13:08.38,0:13:09.52,JP,,0,0,0,,	美味しそう
Dialogue: 0,0:13:09.65,0:13:10.43,JP,,0,0,0,,	そう
Dialogue: 0,0:13:11.05,0:13:12.43,JP,,0,0,0,,	一体何なんだよ
Dialogue: 0,0:13:12.80,0:13:13.71,JP,,0,0,0,,	別に
Dialogue: 0,0:13:13.95,0:13:16.95,JP,,0,0,0,,	ただたまこは困っちゃうかなって思って
Dialogue: 0,0:13:17.66,0:13:19.43,JP,,0,0,0,,	常盤には関係無いだろう
Dialogue: 0,0:13:19.59,0:13:20.38,JP,,0,0,0,,	ある
Dialogue: 0,0:13:20.66,0:13:23.15,JP,,0,0,0,,	たまこに付き纏うのをいい加減止めたら
Dialogue: 0,0:13:23.71,0:13:25.26,JP,,0,0,0,,	別に付き纏ってなんか
Dialogue: 0,0:13:25.40,0:13:26.61,JP,,0,0,0,,	纏ってるよ
Dialogue: 0,0:13:27.00,0:13:30.35,JP,,0,0,0,,	あのさ たまこ 大路のことなんか全然見てないよ
Dialogue: 0,0:13:30.50,0:13:32.87,JP,,0,0,0,,	だから 告白したって無理だと思うよ
Dialogue: 0,0:13:32.94,0:13:34.47,JP,,0,0,0,,	こ 告白?!
Dialogue: 0,0:13:34.61,0:13:36.41,JP,,0,0,0,,	俺は別にそんなことを...
Dialogue: 0,0:13:36.47,0:13:37.43,JP,,0,0,0,,	じゃ何
Dialogue: 0,0:13:37.43,0:13:39.33,JP,,0,0,0,,	だから なんつーか
Dialogue: 0,0:13:39.44,0:13:41.71,JP,,0,0,0,,	ほっとけないつーか 心配なんだよ
Dialogue: 0,0:13:41.83,0:13:43.11,JP,,0,0,0,,	ん そう 心配
Dialogue: 0,0:13:43.50,0:13:47.14,JP,,0,0,0,,	ほら あいつ なんかぼっとしてて 危なっかしいとこあるだろう
Dialogue: 0,0:13:47.52,0:13:48.26,JP,,0,0,0,,	だから...
Dialogue: 0,0:13:48.39,0:13:50.97,JP,,0,0,0,,	そうかな そんなことないよ
Dialogue: 0,0:13:51.42,0:13:52.91,JP,,0,0,0,,	そんなことあるんだよ
Dialogue: 0,0:13:53.15,0:13:55.78,JP,,0,0,0,,	俺は子供の頃からあいつのこと知ってるから
Dialogue: 0,0:13:56.86,0:13:58.65,JP,,0,0,0,,	餅屋と餅屋なだけでしょう
Dialogue: 0,0:13:58.80,0:14:00.89,JP,,0,0,0,,	私のほうがたまこと話ししてるし
Dialogue: 0,0:14:00.99,0:14:02.43,JP,,0,0,0,,	俺だって話してるよ
Dialogue: 0,0:14:02.70,0:14:05.09,JP,,0,0,0,,	俺のほうがたまこのことはよく知ってるし
Dialogue: 0,0:14:05.29,0:14:08.90,JP,,0,0,0,,	じゃ たまこは25メートル泳げるようになったの知ってる?
Dialogue: 0,0:14:09.04,0:14:10.52,JP,,0,0,0,,	マジかよ すげーな
Dialogue: 0,0:14:11.45,0:14:14.84,JP,,0,0,0,,	じゃ お前たまこがメガネかけてたの知ってんのかよ
Dialogue: 0,0:14:15.52,0:14:16.27,JP,,0,0,0,,	なに
Dialogue: 0,0:14:16.62,0:14:18.12,JP,,0,0,0,,	やっぱ知らねんだろう
Dialogue: 0,0:14:18.24,0:14:21.45,JP,,0,0,0,,	コンタクト付ける前はこんなメガネしてたんだぞ
Dialogue: 0,0:14:22.02,0:14:23.62,JP,,0,0,0,,	知ってるに決まってるじゃん
Dialogue: 0,0:14:24.31,0:14:27.11,JP,,0,0,0,,	私 小学校四年生の頃から一緒なんだよ
Dialogue: 0,0:14:27.24,0:14:28.66,JP,,0,0,0,,	そうでしたね
Dialogue: 0,0:14:28.77,0:14:33.41,JP,,0,0,0,,	でも 俺なんかもち蔵だし たまこの大好きな餅だし
Dialogue: 0,0:14:33.41,0:14:37.66,JP,,0,0,0,,	いーやー 青年よ 助けよう
Dialogue: 0,0:14:38.53,0:14:40.00,JP,,0,0,0,,	何やってるんだ お前
Dialogue: 0,0:14:42.25,0:14:43.67,JP,,0,0,0,,	下がるが良い
Dialogue: 0,0:14:43.67,0:14:46.67,JP,,0,0,0,,	この高貴な私に襲いかかろうなど笑止だ
Dialogue: 0,0:14:47.68,0:14:49.58,JP,,0,0,0,,	じゃ何やってんだよ
Dialogue: 0,0:14:49.86,0:14:50.96,JP,,0,0,0,,	シー シー
Dialogue: 0,0:14:52.37,0:14:56.04,JP,,0,0,0,,	大体デラちゃんを使って告白しようなんてダメダメだよ
Dialogue: 0,0:14:56.36,0:14:58.40,JP,,0,0,0,,	ちげーよ これは...
Dialogue: 0,0:14:58.40,0:15:01.01,JP,,0,0,0,,	とにかく たまこは私の友達だから
Dialogue: 0,0:15:01.43,0:15:02.96,JP,,0,0,0,,	私が守るから
Dialogue: 0,0:15:04.39,0:15:06.78,JP,,0,0,0,,	たまこに何話そうが俺の勝手だろう
Dialogue: 0,0:15:09.74,0:15:10.63,JP,,0,0,0,,	喧嘩か
Dialogue: 0,0:15:11.31,0:15:12.44,JP,,0,0,0,,	ち ちげーよ
Dialogue: 0,0:15:12.54,0:15:14.59,JP,,0,0,0,,	別に喧嘩とかじゃなくて
Dialogue: 0,0:15:14.89,0:15:15.82,JP,,0,0,0,,	そうか
Dialogue: 0,0:15:16.23,0:15:19.33,JP,,0,0,0,,	お主達から同じ香りがしたように感じたのだ
Dialogue: 0,0:15:20.03,0:15:21.87,JP,,0,0,0,,	今は少し波立っておるが
Dialogue: 0,0:15:22.12,0:15:24.49,JP,,0,0,0,,	後に美しく透き通るはず
Dialogue: 0,0:15:25.02,0:15:28.20,JP,,0,0,0,,	お主達の香りは同じ色を持っておる
Dialogue: 0,0:15:28.98,0:15:29.96,JP,,0,0,0,,	知らねーよ
Dialogue: 0,0:15:30.86,0:15:32.46,JP,,0,0,0,,	ありゃ  デラちゃん
Dialogue: 0,0:15:33.56,0:15:34.80,JP,,0,0,0,,	なんでここにいるの
Dialogue: 0,0:15:35.12,0:15:37.33,JP,,0,0,0,,	男の旅に理由など無い
Dialogue: 0,0:15:37.71,0:15:39.76,JP,,0,0,0,,	それより 腹が減ったぞ 娘
Dialogue: 0,0:15:40.10,0:15:41.10,JP,,0,0,0,,	お餅あるよ
Dialogue: 0,0:15:41.61,0:15:44.15,JP,,0,0,0,,	それは良いな 行け 娘よ
Dialogue: 0,0:15:44.45,0:15:45.21,JP,,0,0,0,,	はい
Dialogue: 0,0:15:45.46,0:15:47.24,JP,,0,0,0,,	みどりちゃんともち蔵も行こう
Dialogue: 0,0:15:50.49,0:15:52.98,JP,,0,0,0,,	何やってんの 早く行くよ
Dialogue: 0,0:15:53.62,0:15:55.90,JP,,0,0,0,,	ごめん 俺ちょっと用事あるから
Dialogue: 0,0:15:56.27,0:15:57.34,JP,,0,0,0,,	あっそう
Dialogue: 0,0:16:05.59,0:16:07.77,JP,,0,0,0,,	おー 素晴らしき太陽
Dialogue: 0,0:16:08.17,0:16:11.54,JP,,0,0,0,,	これと同じ太陽を王子も見ているのだろうか
Dialogue: 0,0:16:11.79,0:16:13.83,JP,,0,0,0,,	王子よ 暫し待たれよ
Dialogue: 0,0:16:14.19,0:16:15.76,JP,,0,0,0,,	今に必ずお妃を
Dialogue: 0,0:16:25.05,0:16:26.45,JP,,0,0,0,,	大丈夫かな
Dialogue: 0,0:16:26.84,0:16:27.94,JP,,0,0,0,,	頑張ろう たまこ
Dialogue: 0,0:16:28.13,0:16:30.09,JP,,0,0,0,,	練習したんだからできるよ
Dialogue: 0,0:16:30.30,0:16:31.67,JP,,0,0,0,,	うん そうだね
Dialogue: 0,0:16:31.74,0:16:34.84,JP,,0,0,0,,	よーし 泳げないやつは浮袋付けたな
Dialogue: 0,0:16:35.36,0:16:37.10,JP,,0,0,0,,	辛かったらすぐ言うんだぞ
Dialogue: 0,0:16:37.40,0:16:39.09,JP,,0,0,0,,	男子終わったのか
Dialogue: 0,0:16:39.23,0:16:41.24,JP,,0,0,0,,	みんな やぶれかぶれですね
Dialogue: 0,0:16:41.24,0:16:42.99,JP,,0,0,0,,	遠泳  恐るべしだね
Dialogue: 0,0:16:42.99,0:16:44.20,JP,,0,0,0,,	たまこ
Dialogue: 0,0:16:44.20,0:16:46.64,JP,,0,0,0,,	うわー きつそう
Dialogue: 0,0:16:46.91,0:16:47.97,JP,,0,0,0,,	たまこ 行こう
Dialogue: 0,0:16:48.24,0:16:49.63,JP,,0,0,0,,	あ うん
Dialogue: 0,0:16:51.86,0:16:52.69,JP,,0,0,0,,	頑張れよ
Dialogue: 0,0:16:53.07,0:16:55.65,JP,,0,0,0,,	25メートル泳げるようになったんだろう
Dialogue: 0,0:16:56.64,0:16:57.20,JP,,0,0,0,,	うん
Dialogue: 0,0:17:02.80,0:17:04.04,JP,,0,0,0,,	別にいいだろう
Dialogue: 0,0:17:09.63,0:17:10.89,JP,,0,0,0,,	頑張れ たまこ
Dialogue: 0,0:17:11.57,0:17:13.69,JP,,0,0,0,,	たまちゃん 頑張って
Dialogue: 0,0:17:14.17,0:17:17.93,JP,,0,0,0,,	かんな 泳いでるっていうより浮かんでるって感じだけど
Dialogue: 0,0:17:18.48,0:17:20.15,JP,,0,0,0,,	遠泳 得意だから
Dialogue: 0,0:17:20.60,0:17:21.27,JP,,0,0,0,,	そう
Dialogue: 0,0:17:24.43,0:17:26.19,JP,,0,0,0,,	やったね あと半分
Dialogue: 0,0:17:30.33,0:17:31.49,JP,,0,0,0,,	あれもち蔵
Dialogue: 0,0:17:31.75,0:17:32.39,JP,,0,0,0,,	だね
Dialogue: 0,0:17:33.23,0:17:35.87,JP,,0,0,0,,	いいな 終わった人は余裕で
Dialogue: 0,0:17:36.83,0:17:39.13,JP,,0,0,0,,	さて 行こうか みどりちゃん
Dialogue: 0,0:17:40.05,0:17:43.14,JP,,0,0,0,,	ね たまこって大路のことどう思ってるの?
Dialogue: 0,0:17:44.22,0:17:45.09,JP,,0,0,0,,	どうって?
Dialogue: 0,0:17:45.32,0:17:46.53,JP,,0,0,0,,	どうってって
Dialogue: 0,0:17:47.13,0:17:48.36,JP,,0,0,0,,	幼馴染だよ
Dialogue: 0,0:17:48.63,0:17:50.20,JP,,0,0,0,,	というか餅屋仲間
Dialogue: 0,0:17:50.36,0:17:51.52,JP,,0,0,0,,	そうだよね
Dialogue: 0,0:17:51.60,0:17:53.26,JP,,0,0,0,,	じゃあさ 私のことは?
Dialogue: 0,0:17:53.84,0:17:54.74,JP,,0,0,0,,	みどりちゃん?
Dialogue: 0,0:17:54.98,0:17:57.59,JP,,0,0,0,,	みどりちゃんは大好きだよ
Dialogue: 0,0:18:00.08,0:18:00.74,JP,,0,0,0,,	ありがとう
Dialogue: 0,0:18:00.74,0:18:02.77,JP,,0,0,0,,	いや
Dialogue: 0,0:18:02.77,0:18:03.59,JP,,0,0,0,,	デラちゃん
Dialogue: 0,0:18:05.86,0:18:08.79,JP,,0,0,0,,	まったく 私ぐらいの高貴なものになると
Dialogue: 0,0:18:08.79,0:18:10.54,JP,,0,0,0,,	近寄ってくる奴らが多...
Dialogue: 0,0:18:13.01,0:18:14.60,JP,,0,0,0,,	デラちゃん 人気者だね
Dialogue: 0,0:18:14.83,0:18:16.36,JP,,0,0,0,,	そうは見えないけど
Dialogue: 0,0:18:18.56,0:18:20.34,JP,,0,0,0,,	たまちゃん たまちゃん
Dialogue: 0,0:18:20.68,0:18:22.20,JP,,0,0,0,,	もうすぐ花火だよ
Dialogue: 0,0:18:22.44,0:18:24.00,JP,,0,0,0,,	みんな外 行っちゃったよ
Dialogue: 0,0:18:24.53,0:18:27.03,JP,,0,0,0,,	たまちゃん 楽しみって言ってたよ
Dialogue: 0,0:18:27.03,0:18:28.29,JP,,0,0,0,,	うん 起きてるよ
Dialogue: 0,0:18:33.55,0:18:35.22,JP,,0,0,0,,	よっぽど疲れたんだね
Dialogue: 0,0:18:38.49,0:18:39.30,JP,,0,0,0,,	かんなちゃん
Dialogue: 0,0:18:41.99,0:18:43.04,JP,,0,0,0,,	海ですか
Dialogue: 0,0:18:43.62,0:18:44.51,JP,,0,0,0,,	溺れるよ
Dialogue: 0,0:18:47.28,0:18:49.60,JP,,0,0,0,,	花火だよ しおりちゃん かんなちゃん
Dialogue: 0,0:18:49.74,0:18:50.34,JP,,0,0,0,,	起きた
Dialogue: 0,0:18:50.67,0:18:53.40,JP,,0,0,0,,	行くよ 何くつろいじゃってんの 二人とも
Dialogue: 0,0:18:54.58,0:18:56.04,JP,,0,0,0,,	すごいね たまこって
Dialogue: 0,0:18:56.43,0:18:56.88,JP,,0,0,0,,	うん
Dialogue: 0,0:19:00.83,0:19:01.54,JP,,0,0,0,,	え なんで
Dialogue: 0,0:19:02.30,0:19:03.26,JP,,0,0,0,,	別に
Dialogue: 0,0:19:03.26,0:19:06.03,JP,,0,0,0,,	ただ話があるんなら してきたらってだけ
Dialogue: 0,0:19:07.87,0:19:09.15,JP,,0,0,0,,	いいよ 別に
Dialogue: 0,0:19:10.02,0:19:10.70,JP,,0,0,0,,	どうして
Dialogue: 0,0:19:10.96,0:19:12.58,JP,,0,0,0,,	お前には関係無いだろう
Dialogue: 0,0:19:13.08,0:19:14.70,JP,,0,0,0,,	まあ そうだけどさ
Dialogue: 0,0:19:14.88,0:19:16.60,JP,,0,0,0,,	やー 見て見て
Dialogue: 0,0:19:18.54,0:19:20.20,JP,,0,0,0,,	おっきいな
Dialogue: 0,0:19:20.42,0:19:23.30,JP,,0,0,0,,	早くあっち行こう もっと大きく見えるよ
Dialogue: 0,0:19:23.30,0:19:24.84,JP,,0,0,0,,	たまちゃん 待って
Dialogue: 0,0:19:28.94,0:19:30.12,JP,,0,0,0,,	常盤も行けよ
Dialogue: 0,0:19:31.31,0:19:33.13,JP,,0,0,0,,	俺と一緒にいてもしょうがないだろう
Dialogue: 0,0:19:33.65,0:19:35.87,JP,,0,0,0,,	安心しろ もう告白なんかしな...
Dialogue: 0,0:19:36.19,0:19:40.46,JP,,0,0,0,,	いや 別にしようとか思ってたわけじゃねえけど
Dialogue: 0,0:19:40.94,0:19:41.64,JP,,0,0,0,,	どうして
Dialogue: 0,0:19:41.71,0:19:44.61,JP,,0,0,0,,	だから 話してもしょうがないっていうか
Dialogue: 0,0:19:45.04,0:19:49.15,JP,,0,0,0,,	だから 別にそもそも何も話すつもりなかったけど
Dialogue: 0,0:19:49.23,0:19:49.89,JP,,0,0,0,,	だから
Dialogue: 0,0:19:50.32,0:19:51.58,JP,,0,0,0,,	あー いたいた
Dialogue: 0,0:19:51.71,0:19:53.22,JP,,0,0,0,,	みどりちゃん みどりちゃん
Dialogue: 0,0:19:53.35,0:19:55.62,JP,,0,0,0,,	あっちにいい場所見つけちゃったよ
Dialogue: 0,0:19:56.06,0:19:57.94,JP,,0,0,0,,	穴場だよ 穴場
Dialogue: 0,0:19:57.94,0:19:58.84,JP,,0,0,0,,	はいはい
Dialogue: 0,0:19:59.25,0:20:00.49,JP,,0,0,0,,	行こうよ 大路も
Dialogue: 0,0:20:01.11,0:20:02.03,JP,,0,0,0,,	俺はいいよ
Dialogue: 0,0:20:02.23,0:20:03.84,JP,,0,0,0,,	もち蔵も来なよ
Dialogue: 0,0:20:05.74,0:20:06.96,JP,,0,0,0,,	たまこも呼んでるし
Dialogue: 0,0:20:08.43,0:20:09.47,JP,,0,0,0,,	うるせーな
Dialogue: 0,0:20:15.51,0:20:17.06,JP,,0,0,0,,	たまや
Dialogue: 0,0:20:17.75,0:20:18.89,JP,,0,0,0,,	うちの店だ
Dialogue: 0,0:20:19.09,0:20:20.81,JP,,0,0,0,,	たまや
Dialogue: 0,0:20:21.10,0:20:24.67,JP,,0,0,0,,	たまや～のお餅をよろしく
Dialogue: 0,0:20:25.09,0:20:27.01,JP,,0,0,0,,	たまや
Dialogue: 0,0:20:27.01,0:20:29.15,JP,,0,0,0,,	のおいしいお餅
Dialogue: 0,0:20:29.84,0:20:31.02,JP,,0,0,0,,	バカじゃねーの
Dialogue: 0,0:20:32.97,0:20:34.83,JP,,0,0,0,,	たまや
Dialogue: 0,0:20:35.03,0:20:37.47,JP,,0,0,0,,	ライスケーキOh!ZEEもよろしく
Dialogue: 0,0:20:39.77,0:20:40.90,JP,,0,0,0,,	面白いね
Dialogue: 0,0:20:44.24,0:20:46.66,JP,,0,0,0,,	恋の花火に心の花
Dialogue: 0,0:20:47.23,0:20:49.77,JP,,0,0,0,,	真夏の夜の夢 色づく想い
Dialogue: 0,0:20:50.26,0:20:52.82,JP,,0,0,0,,	儚く散ってしまわぬように
Dialogue: 0,0:21:00.09,0:21:00.93,JP,,0,0,0,,	デラちゃん
Dialogue: 0,0:21:01.95,0:21:02.68,JP,,0,0,0,,	なんか
Dialogue: 0,0:21:02.77,0:21:03.67,JP,,0,0,0,,	ピンチっぽい
Dialogue: 0,0:21:03.76,0:21:04.83,JP,,0,0,0,,	助けてくる
Dialogue: 0,0:21:17.18,0:21:18.16,JP,,0,0,0,,	宿題は
Dialogue: 0,0:21:18.35,0:21:20.23,JP,,0,0,0,,	うるせーな やってるよ
Dialogue: 0,0:21:20.48,0:21:22.39,JP,,0,0,0,,	また適当なことばっかり
Dialogue: 0,0:21:22.51,0:21:24.90,JP,,0,0,0,,	何があっても絶対手伝わないからね
Dialogue: 0,0:21:25.53,0:21:27.52,JP,,0,0,0,,	手伝ってなんて頼んだことねーだろう
Dialogue: 0,0:21:29.73,0:21:31.13,JP,,0,0,0,,	行ってきます
Dialogue: 0,0:21:32.01,0:21:33.37,JP,,0,0,0,,	今日も暑いな
Dialogue: 0,0:21:46.28,0:21:47.19,JP,,0,0,0,,	バカ
Dialogue: 0,0:23:25.84,0:23:28.12,JP,,0,0,0,,	夏はつるりとした白玉ですよね
Dialogue: 0,0:23:28.24,0:23:29.09,JP,,0,0,0,,	たまこです
Dialogue: 0,0:23:29.31,0:23:31.53,JP,,0,0,0,,	冷たい砂糖水につけても美味しいよ
Dialogue: 0,0:23:31.81,0:23:34.53,JP,,0,0,0,,	「白玉に溶け残りたる砂糖かな」
Dialogue: 0,0:23:34.73,0:23:36.96,JP,,0,0,0,,	高浜虚子という人の句だって
Dialogue: 0,0:23:36.96,0:23:39.77,JP,,0,0,0,,	次回はどんなお餅が食べられるかな
Dialogue: 0,0:00:09.41,0:00:12.26,CN,,0,0,0,,	餅藏 閒的沒事幹就進來幫忙
Dialogue: 0,0:00:13.19,0:00:14.10,CN,,0,0,0,,	哦
Dialogue: 0,0:00:17.69,0:00:19.07,CN,,0,0,0,,	那我走了哦
Dialogue: 0,0:00:19.15,0:00:20.58,CN,,0,0,0,,	好熱
Dialogue: 0,0:00:26.39,0:00:27.66,CN,,0,0,0,,	怎麼了
Dialogue: 0,0:00:28.01,0:00:28.88,CN,,0,0,0,,	餅藏
Dialogue: 0,0:00:30.13,0:00:30.90,CN,,0,0,0,,	幹嘛
Dialogue: 0,0:00:31.59,0:00:32.66,CN,,0,0,0,,	去游泳嗎
Dialogue: 0,0:00:32.83,0:00:34.07,CN,,0,0,0,,	喂 玉子
Dialogue: 0,0:00:34.23,0:00:35.34,CN,,0,0,0,,	怎麼了
Dialogue: 0,0:00:35.63,0:00:39.60,CN,,0,0,0,,	請男生來怎麼行 我們可是要穿泳裝的哦
Dialogue: 0,0:00:39.84,0:00:40.93,CN,,0,0,0,,	那還真糟糕
Dialogue: 0,0:00:41.32,0:00:43.30,CN,,0,0,0,,	小玉是個不純潔的孩子
Dialogue: 0,0:00:43.83,0:00:45.03,CN,,0,0,0,,	我才不去呢
Dialogue: 0,0:00:45.41,0:00:47.06,CN,,0,0,0,,	這樣啊 再見
Dialogue: 0,0:00:52.16,0:00:53.59,CN,,0,0,0,,	給我做作業
Dialogue: 0,0:00:54.13,0:00:55.60,CN,,0,0,0,,	好痛啊
Dialogue: 0,0:00:56.49,0:00:59.19,CN,,0,0,0,,	夏日到來 內心悸動
Dialogue: 0,0:00:59.75,0:01:02.67,CN,,0,0,0,,	那孩子的感情現在何處
Dialogue: 0,0:02:35.76,0:02:37.21,CN,,0,0,0,,	史織真慢啊
Dialogue: 0,0:02:38.58,0:02:39.71,CN,,0,0,0,,	久等了
Dialogue: 0,0:02:40.07,0:02:41.37,CN,,0,0,0,,	對不起我來晚了
Dialogue: 0,0:02:41.69,0:02:42.58,CN,,0,0,0,,	睡過頭了嗎
Dialogue: 0,0:02:42.82,0:02:44.78,CN,,0,0,0,,	不 是泳裝忘記帶了
Dialogue: 0,0:02:45.34,0:02:47.67,CN,,0,0,0,,	我本想就這樣過來的...
Dialogue: 0,0:02:48.03,0:02:49.53,CN,,0,0,0,,	那得回去拿
Dialogue: 0,0:02:49.93,0:02:51.68,CN,,0,0,0,,	不然來游泳池就沒意義了
Dialogue: 0,0:02:57.43,0:03:00.93,CN,,0,0,0,,	右 左 右 左 右
Dialogue: 0,0:03:01.09,0:03:03.26,CN,,0,0,0,,	喂喂 腰彎了哦
Dialogue: 0,0:03:03.57,0:03:05.70,CN,,0,0,0,,	玉子不會游泳啊
Dialogue: 0,0:03:07.02,0:03:08.70,CN,,0,0,0,,	加油 玉子
Dialogue: 0,0:03:09.28,0:03:10.73,CN,,0,0,0,,	恐怕不行了
Dialogue: 0,0:03:10.96,0:03:13.59,CN,,0,0,0,,	那麼 我放手 你一個人游游看
Dialogue: 0,0:03:13.59,0:03:15.49,CN,,0,0,0,,	欸 小綠
Dialogue: 0,0:03:15.49,0:03:17.98,CN,,0,0,0,,	真是的 後天就要去海邊夏令營了
Dialogue: 0,0:03:18.37,0:03:20.40,CN,,0,0,0,,	好了 加油加油
Dialogue: 0,0:03:26.16,0:03:27.06,CN,,0,0,0,,	玉子
Dialogue: 0,0:03:27.18,0:03:28.46,CN,,0,0,0,,	難以置信
Dialogue: 0,0:03:28.79,0:03:30.70,CN,,0,0,0,,	1毫米都沒有前進
Dialogue: 0,0:03:32.48,0:03:33.35,CN,,0,0,0,,	怎麼樣
Dialogue: 0,0:03:35.25,0:03:37.59,CN,,0,0,0,,	進步不小吧 這次
Dialogue: 0,0:03:38.15,0:03:41.41,CN,,0,0,0,,	玉子 小學的時候游泳幾級?
Dialogue: 0,0:03:41.68,0:03:42.73,CN,,0,0,0,,	13級
Dialogue: 0,0:03:42.83,0:03:44.96,CN,,0,0,0,,	能在水裡憋氣10秒鐘
Dialogue: 0,0:03:45.24,0:03:46.55,CN,,0,0,0,,	也是呢
Dialogue: 0,0:03:46.55,0:03:50.49,CN,,0,0,0,,	12級的水中猜拳只有玉子不行
Dialogue: 0,0:03:50.84,0:03:53.64,CN,,0,0,0,,	因為害怕嘛 又不能呼吸
Dialogue: 0,0:03:53.97,0:03:55.79,CN,,0,0,0,,	所以才要換氣啊
Dialogue: 0,0:03:56.30,0:03:58.13,CN,,0,0,0,,	餅藏也這麼說過呢
Dialogue: 0,0:03:59.00,0:04:00.52,CN,,0,0,0,,	大路?什麼時候?
Dialogue: 0,0:04:01.00,0:04:03.38,CN,,0,0,0,,	忘記了 那是痛苦的回憶
Dialogue: 0,0:04:05.91,0:04:07.67,CN,,0,0,0,,	小玉 讓一下
Dialogue: 0,0:04:11.50,0:04:12.46,CN,,0,0,0,,	神奈
Dialogue: 0,0:04:12.50,0:04:13.66,CN,,0,0,0,,	沉下去了
Dialogue: 0,0:04:17.33,0:04:18.29,CN,,0,0,0,,	神奈?
Dialogue: 0,0:04:18.48,0:04:19.53,CN,,0,0,0,,	會淹死的
Dialogue: 0,0:04:19.89,0:04:21.02,CN,,0,0,0,,	你也是旱鴨子?
Dialogue: 0,0:04:24.62,0:04:26.09,CN,,0,0,0,,	好痛啊
Dialogue: 0,0:04:26.09,0:04:28.16,CN,,0,0,0,,	吃飯的時候別發呆
Dialogue: 0,0:04:28.54,0:04:30.50,CN,,0,0,0,,	我可是在想很重要的事
Dialogue: 0,0:04:30.86,0:04:32.60,CN,,0,0,0,,	重要的事?什麼事?
Dialogue: 0,0:04:34.38,0:04:35.19,CN,,0,0,0,,	沒什麼
Dialogue: 0,0:04:35.51,0:04:37.39,CN,,0,0,0,,	反正也就是小玉的事對吧
Dialogue: 0,0:04:38.31,0:04:39.16,CN,,0,0,0,,	什麼嘛
Dialogue: 0,0:04:39.16,0:04:41.01,CN,,0,0,0,,	才不是呢
Dialogue: 0,0:04:44.19,0:04:45.08,CN,,0,0,0,,	我吃飽了
Dialogue: 0,0:04:52.10,0:04:53.15,CN,,0,0,0,,	真是的
Dialogue: 0,0:04:56.97,0:04:59.09,CN,,0,0,0,,	果然還是應該去的啊
Dialogue: 0,0:04:59.85,0:05:02.05,CN,,0,0,0,,	她們去的是市民游泳場吧
Dialogue: 0,0:05:07.57,0:05:09.15,CN,,0,0,0,,	餅藏
Dialogue: 0,0:05:09.97,0:05:12.14,CN,,0,0,0,,	玉子 是你啊
Dialogue: 0,0:05:12.14,0:05:12.82,CN,,0,0,0,,	嗯
Dialogue: 0,0:05:13.12,0:05:16.28,CN,,0,0,0,,	吶 我們一起玩吧
Dialogue: 0,0:05:17.74,0:05:18.99,CN,,0,0,0,,	不...不了
Dialogue: 0,0:05:19.38,0:05:22.50,CN,,0,0,0,,	我又不是為了這個才來的
Dialogue: 0,0:05:23.24,0:05:24.34,CN,,0,0,0,,	是嗎
Dialogue: 0,0:05:24.76,0:05:27.28,CN,,0,0,0,,	我肯定會這樣說的
Dialogue: 0,0:05:32.16,0:05:33.20,CN,,0,0,0,,	年輕人
Dialogue: 0,0:05:33.61,0:05:35.27,CN,,0,0,0,,	你...你怎麼進來的
Dialogue: 0,0:05:35.29,0:05:36.58,CN,,0,0,0,,	什麼你啊你
Dialogue: 0,0:05:36.77,0:05:39.31,CN,,0,0,0,,	我的名字叫「德拉・糕點難吃」
Dialogue: 0,0:05:39.55,0:05:41.34,CN,,0,0,0,,	是歷史悠久的王室...
Dialogue: 0,0:05:41.34,0:05:42.87,CN,,0,0,0,,	我耳朵都聽出繭了
Dialogue: 0,0:05:42.87,0:05:44.13,CN,,0,0,0,,	別擅自闖進來
Dialogue: 0,0:05:44.48,0:05:46.51,CN,,0,0,0,,	是你邀請我來的吧
Dialogue: 0,0:05:46.91,0:05:49.23,CN,,0,0,0,,	你看 那扇門上掛著歡迎的鐘
Dialogue: 0,0:05:50.36,0:05:53.77,CN,,0,0,0,,	那個鐘是舉行歡迎宴會的標誌
Dialogue: 0,0:05:54.09,0:05:56.13,CN,,0,0,0,,	我來這裡已有半年之多
Dialogue: 0,0:05:56.59,0:05:59.48,CN,,0,0,0,,	雖然現在才舉行宴會有點晚
Dialogue: 0,0:05:59.79,0:06:03.13,CN,,0,0,0,,	不過你想歡迎我的話我也欣然接受
Dialogue: 0,0:06:03.13,0:06:05.77,CN,,0,0,0,,	這裡是日本 那個叫做風鈴
Dialogue: 0,0:06:06.02,0:06:07.88,CN,,0,0,0,,	沒有舉行什麼宴會
Dialogue: 0,0:06:08.07,0:06:10.14,CN,,0,0,0,,	你說什麼 竟敢誤導我
Dialogue: 0,0:06:10.14,0:06:11.81,CN,,0,0,0,,	是誰誤導誰啊
Dialogue: 0,0:06:12.33,0:06:13.03,CN,,0,0,0,,	嘛算了
Dialogue: 0,0:06:13.03,0:06:15.20,CN,,0,0,0,,	既然來了就聽聽你的煩惱吧
Dialogue: 0,0:06:15.51,0:06:16.29,CN,,0,0,0,,	蛤?
Dialogue: 0,0:06:16.64,0:06:17.96,CN,,0,0,0,,	你在煩惱吧
Dialogue: 0,0:06:20.82,0:06:22.36,CN,,0,0,0,,	你什麼時候進來的
Dialogue: 0,0:06:22.62,0:06:24.75,CN,,0,0,0,,	吶 我們一起玩吧
Dialogue: 0,0:06:25.59,0:06:27.20,CN,,0,0,0,,	不...不了
Dialogue: 0,0:06:27.28,0:06:29.68,CN,,0,0,0,,	我又不是為了這個才來的
Dialogue: 0,0:06:30.32,0:06:31.74,CN,,0,0,0,,	差不多從這裡
Dialogue: 0,0:06:31.74,0:06:32.88,CN,,0,0,0,,	你聽見了啊
Dialogue: 0,0:06:32.89,0:06:34.89,CN,,0,0,0,,	是你自己說出來的
Dialogue: 0,0:06:35.96,0:06:38.07,CN,,0,0,0,,	是和鳥類沒有關係的事
Dialogue: 0,0:06:38.47,0:06:39.30,CN,,0,0,0,,	別管我了
Dialogue: 0,0:06:39.30,0:06:39.96,CN,,0,0,0,,	LOVE嗎
Dialogue: 0,0:06:40.85,0:06:43.93,CN,,0,0,0,,	年輕人 你啊 讓人一看就懂
Dialogue: 0,0:06:44.32,0:06:45.38,CN,,0,0,0,,	{\fnLihei Pro\fs44}囉{\r}嗦
Dialogue: 0,0:06:45.38,0:06:47.28,CN,,0,0,0,,	朝思暮想的少女是誰
Dialogue: 0,0:06:47.47,0:06:48.40,CN,,0,0,0,,	喂 說說看
Dialogue: 0,0:06:48.40,0:06:49.37,CN,,0,0,0,,	史織小姐嗎
Dialogue: 0,0:06:49.79,0:06:51.12,CN,,0,0,0,,	你可別打她的主意
Dialogue: 0,0:06:51.20,0:06:52.26,CN,,0,0,0,,	不是啦
Dialogue: 0,0:06:52.46,0:06:54.15,CN,,0,0,0,,	那麼是花店老闆嗎
Dialogue: 0,0:06:54.29,0:06:57.27,CN,,0,0,0,,	那個你還是放棄吧 對你來說太耀眼了
Dialogue: 0,0:06:57.57,0:06:59.49,CN,,0,0,0,,	都說不是了
Dialogue: 0,0:06:59.80,0:07:01.11,CN,,0,0,0,,	那麼是小姑娘嗎
Dialogue: 0,0:07:03.23,0:07:04.30,CN,,0,0,0,,	不...不是的
Dialogue: 0,0:07:04.57,0:07:05.62,CN,,0,0,0,,	年輕人
Dialogue: 0,0:07:05.97,0:07:08.06,CN,,0,0,0,,	你啊 讓人一看就懂
Dialogue: 0,0:07:08.35,0:07:10.04,CN,,0,0,0,,	好了 快回去
Dialogue: 0,0:07:10.20,0:07:11.76,CN,,0,0,0,,	是小姑娘啊
Dialogue: 0,0:07:12.05,0:07:15.37,CN,,0,0,0,,	住得這麼近 竟然還不能傳達心意
Dialogue: 0,0:07:15.76,0:07:17.25,CN,,0,0,0,,	你還是男人嗎
Dialogue: 0,0:07:17.34,0:07:18.43,CN,,0,0,0,,	{\fnLihei Pro\fs44}囉{\r}嗦
Dialogue: 0,0:07:18.58,0:07:21.66,CN,,0,0,0,,	我也想表白啊 去年也是 前年也是
Dialogue: 0,0:07:22.06,0:07:24.60,CN,,0,0,0,,	但是 玉子那傢伙完全沒察...
Dialogue: 0,0:07:25.71,0:07:26.82,CN,,0,0,0,,	果然是這樣
Dialogue: 0,0:07:27.29,0:07:29.07,CN,,0,0,0,,	{\fnLihei Pro\fs44}囉{\r}...{\fnLihei Pro\fs44}啰{\r}嗦
Dialogue: 0,0:07:29.38,0:07:31.77,CN,,0,0,0,,	沒辦法 這也是種緣分
Dialogue: 0,0:07:32.24,0:07:37.29,CN,,0,0,0,,	還是讓我這個在祖國與無數女性傳出緋聞的情場高手來幫你吧
Dialogue: 0,0:07:37.77,0:07:41.27,CN,,0,0,0,,	我已經被那小姑娘求愛過一次
Dialogue: 0,0:07:41.42,0:07:43.24,CN,,0,0,0,,	玉子向你...
Dialogue: 0,0:07:43.49,0:07:47.94,CN,,0,0,0,,	放心吧 我可是高貴之身 已經鄭重地婉拒她了
Dialogue: 0,0:07:48.69,0:07:50.44,CN,,0,0,0,,	她頗為傷心呢
Dialogue: 0,0:07:50.83,0:07:54.20,CN,,0,0,0,,	所以我對小姑娘的心情了如指掌
Dialogue: 0,0:07:54.78,0:07:56.34,CN,,0,0,0,,	吹牛也不打草稿
Dialogue: 0,0:07:56.56,0:07:59.12,CN,,0,0,0,,	你不信就算了
Dialogue: 0,0:07:59.81,0:08:03.10,CN,,0,0,0,,	難得我作為男人想助你一臂之力
Dialogue: 0,0:08:03.63,0:08:04.67,CN,,0,0,0,,	再見了
Dialogue: 0,0:08:06.95,0:08:07.60,CN,,0,0,0,,	等等
Dialogue: 0,0:08:07.60,0:08:08.14,CN,,0,0,0,,	啊咧
Dialogue: 0,0:08:13.10,0:08:15.39,CN,,0,0,0,,	餡子也曬黑了許多啊
Dialogue: 0,0:08:16.57,0:08:18.85,CN,,0,0,0,,	明明塗了防曬乳的
Dialogue: 0,0:08:19.21,0:08:20.66,CN,,0,0,0,,	餡子也來吧
Dialogue: 0,0:08:23.08,0:08:25.38,CN,,0,0,0,,	換氣就行了哦
Dialogue: 0,0:08:25.77,0:08:26.93,CN,,0,0,0,,	夢話嗎
Dialogue: 0,0:08:27.56,0:08:29.71,CN,,0,0,0,,	拿塊毛巾毯被給她蓋上
Dialogue: 0,0:08:30.32,0:08:31.45,CN,,0,0,0,,	好～
Dialogue: 0,0:08:32.40,0:08:33.91,CN,,0,0,0,,	這樣 明白了嗎
Dialogue: 0,0:08:34.02,0:08:37.89,CN,,0,0,0,,	這樣做 聽好了 這個角度是最重要的
Dialogue: 0,0:08:38.14,0:08:40.02,CN,,0,0,0,,	女人會因此迷上你
Dialogue: 0,0:08:40.72,0:08:41.84,CN,,0,0,0,,	我說你啊
Dialogue: 0,0:08:42.19,0:08:43.59,CN,,0,0,0,,	怎麼可能去做
Dialogue: 0,0:08:49.93,0:08:54.01,CN,,0,0,0,,	長泳嗎 游泳場和大海完全不同吧
Dialogue: 0,0:08:54.41,0:08:55.58,CN,,0,0,0,,	好激動
Dialogue: 0,0:08:56.02,0:08:57.04,CN,,0,0,0,,	打起精神
Dialogue: 0,0:08:57.33,0:08:58.57,CN,,0,0,0,,	只是游泳而已
Dialogue: 0,0:08:58.73,0:09:01.11,CN,,0,0,0,,	除此之外都是快樂的事情
Dialogue: 0,0:09:01.34,0:09:02.25,CN,,0,0,0,,	也是呢
Dialogue: 0,0:09:02.73,0:09:05.45,CN,,0,0,0,,	好 考慮到今晚
Dialogue: 0,0:09:05.87,0:09:06.72,CN,,0,0,0,,	年糕?
Dialogue: 0,0:09:06.72,0:09:07.96,CN,,0,0,0,,	嗯 是的
Dialogue: 0,0:09:08.20,0:09:10.29,CN,,0,0,0,,	營火聚餐的時候烤著吃
Dialogue: 0,0:09:10.76,0:09:12.21,CN,,0,0,0,,	大家的份也有哦
Dialogue: 0,0:09:13.27,0:09:14.12,CN,,0,0,0,,	好好吃的樣子
Dialogue: 0,0:09:14.12,0:09:14.72,CN,,0,0,0,,	給
Dialogue: 0,0:09:14.80,0:09:16.34,CN,,0,0,0,,	不愧是小玉
Dialogue: 0,0:09:17.09,0:09:19.13,CN,,0,0,0,,	不過夏天吃不下年糕吧
Dialogue: 0,0:09:19.46,0:09:22.34,CN,,0,0,0,,	沒那回事哦 夏天也可以吃的
Dialogue: 0,0:09:22.87,0:09:25.74,CN,,0,0,0,,	你看 宇冶金時上面也有放吧
Dialogue: 0,0:09:25.88,0:09:27.59,CN,,0,0,0,,	那是糯米糰子吧
Dialogue: 0,0:09:27.80,0:09:29.22,CN,,0,0,0,,	年糕也可以吧
Dialogue: 0,0:09:29.57,0:09:31.49,CN,,0,0,0,,	年糕不會變硬嗎
Dialogue: 0,0:09:31.60,0:09:33.05,CN,,0,0,0,,	那就加熱一下
Dialogue: 0,0:09:33.37,0:09:34.70,CN,,0,0,0,,	冰會融化的
Dialogue: 0,0:09:35.07,0:09:37.29,CN,,0,0,0,,	不過 那樣也別有風味呢
Dialogue: 0,0:09:38.02,0:09:38.57,CN,,0,0,0,,	嗯
Dialogue: 0,0:09:38.82,0:09:40.33,CN,,0,0,0,,	年糕好深奧
Dialogue: 0,0:09:40.53,0:09:41.50,CN,,0,0,0,,	是呢
Dialogue: 0,0:09:44.03,0:09:46.61,CN,,0,0,0,,	喂 你想把我一直塞在這裡面嗎
Dialogue: 0,0:09:46.64,0:09:48.28,CN,,0,0,0,,	好了 進去待著
Dialogue: 0,0:09:48.63,0:09:51.24,CN,,0,0,0,,	比起這個 真的沒問題嗎
Dialogue: 0,0:09:51.54,0:09:56.64,CN,,0,0,0,,	放心吧 有我罩著 戀愛成功那是輕而易舉
Dialogue: 0,0:09:57.11,0:10:01.01,CN,,0,0,0,,	比起這個 我待在這裡面就能到達海邊對吧
Dialogue: 0,0:10:01.39,0:10:05.61,CN,,0,0,0,,	好了 那麼按照名冊序號排隊就座
Dialogue: 0,0:10:06.34,0:10:08.39,CN,,0,0,0,,	好 你給我安份點
Dialogue: 0,0:10:08.39,0:10:09.33,CN,,0,0,0,,	喂
Dialogue: 0,0:10:09.48,0:10:11.22,CN,,0,0,0,,	放我出去
Dialogue: 0,0:10:19.04,0:10:20.54,CN,,0,0,0,,	雙層床真好啊
Dialogue: 0,0:10:24.87,0:10:26.15,CN,,0,0,0,,	啊咧 神奈?
Dialogue: 0,0:10:26.61,0:10:28.75,CN,,0,0,0,,	神奈幹勁十足呢
Dialogue: 0,0:10:29.03,0:10:30.55,CN,,0,0,0,,	游泳是在明天吧
Dialogue: 0,0:10:31.27,0:10:33.42,CN,,0,0,0,,	因為我很喜歡長泳
Dialogue: 0,0:10:38.72,0:10:40.04,CN,,0,0,0,,	喂 還好嗎
Dialogue: 0,0:10:41.36,0:10:44.50,CN,,0,0,0,,	頭暈目眩...好難受
Dialogue: 0,0:10:44.57,0:10:45.93,CN,,0,0,0,,	看 到海邊了
Dialogue: 0,0:10:47.91,0:10:51.23,CN,,0,0,0,,	是海啊 久違的海水的味道
Dialogue: 0,0:10:51.23,0:10:54.04,CN,,0,0,0,,	我剛發現鳥也會暈車
Dialogue: 0,0:10:55.37,0:10:56.73,CN,,0,0,0,,	喂 別吐啊
Dialogue: 0,0:10:56.93,0:10:58.47,CN,,0,0,0,,	沒辦法
Dialogue: 0,0:10:58.47,0:11:00.45,CN,,0,0,0,,	等我身體恢復了再去海邊
Dialogue: 0,0:11:01.36,0:11:03.83,CN,,0,0,0,,	年輕人 情書準備好了嗎
Dialogue: 0,0:11:04.15,0:11:05.05,CN,,0,0,0,,	情書?
Dialogue: 0,0:11:05.61,0:11:07.27,CN,,0,0,0,,	嗯 寫是寫了
Dialogue: 0,0:11:07.45,0:11:08.60,CN,,0,0,0,,	好 讀給我聽聽
Dialogue: 0,0:11:08.60,0:11:09.38,CN,,0,0,0,,	在這裡讀?
Dialogue: 0,0:11:10.80,0:11:13.85,CN,,0,0,0,,	那個 我有話想和你說
Dialogue: 0,0:11:14.13,0:11:16.51,CN,,0,0,0,,	今天晚上能出來嗎
Dialogue: 0,0:11:16.63,0:11:18.87,CN,,0,0,0,,	你這情書也太無聊了吧
Dialogue: 0,0:11:19.43,0:11:20.21,CN,,0,0,0,,	嘛算了
Dialogue: 0,0:11:20.51,0:11:22.57,CN,,0,0,0,,	求愛的練習做過了吧
Dialogue: 0,0:11:23.07,0:11:25.38,CN,,0,0,0,,	這樣 這裡的角度
Dialogue: 0,0:11:25.38,0:11:27.42,CN,,0,0,0,,	都說不做了嘛
Dialogue: 0,0:11:27.54,0:11:28.38,CN,,0,0,0,,	小德拉
Dialogue: 0,0:11:28.64,0:11:29.59,CN,,0,0,0,,	常盤
Dialogue: 0,0:11:30.23,0:11:32.43,CN,,0,0,0,,	為什麼小德拉會在這種地方?
Dialogue: 0,0:11:32.43,0:11:34.52,CN,,0,0,0,,	哦 是小姑娘的朋友啊
Dialogue: 0,0:11:34.52,0:11:37.11,CN,,0,0,0,,	呀 這個年輕人要向小姑娘表...
Dialogue: 0,0:11:37.11,0:11:38.89,CN,,0,0,0,,	不 沒什麼
Dialogue: 0,0:11:41.78,0:11:42.66,CN,,0,0,0,,	這個是...
Dialogue: 0,0:11:42.90,0:11:44.95,CN,,0,0,0,,	不 沒什麼啦
Dialogue: 0,0:11:45.80,0:11:47.73,CN,,0,0,0,,	喂 快給我送過去
Dialogue: 0,0:11:48.07,0:11:49.99,CN,,0,0,0,,	真是個麻煩的傢伙
Dialogue: 0,0:11:50.37,0:11:52.96,CN,,0,0,0,,	是你說會幫我送過去 我才寫的
Dialogue: 0,0:11:52.96,0:11:55.98,CN,,0,0,0,,	再說男生也進不了女生宿舍
Dialogue: 0,0:11:56.08,0:11:57.24,CN,,0,0,0,,	好了啦 快去
Dialogue: 0,0:12:00.37,0:12:01.99,CN,,0,0,0,,	啊咧?
Dialogue: 0,0:12:02.77,0:12:05.73,CN,,0,0,0,,	話說 小姑娘在哪裡
Dialogue: 0,0:12:06.25,0:12:08.79,CN,,0,0,0,,	喂 小姑娘 你在這裡啊
Dialogue: 0,0:12:07.66,0:12:09.05,CN,,0,0,0,,{\pos(640,50)}	小綠你來啦
Dialogue: 0,0:12:09.24,0:12:10.67,CN,,0,0,0,,	喂 小姑娘
Dialogue: 0,0:12:15.06,0:12:17.99,CN,,0,0,0,,	吶 剛才有沒有聽到小德拉的聲音
Dialogue: 0,0:12:18.77,0:12:21.30,CN,,0,0,0,,	有嗎 我沒聽到
Dialogue: 0,0:12:25.53,0:12:26.31,CN,,0,0,0,,	常盤
Dialogue: 0,0:12:31.69,0:12:33.63,CN,,0,0,0,,	什麼嘛 那傢伙
Dialogue: 0,0:12:42.33,0:12:46.11,CN,,0,0,0,,	像這樣在黑暗中閉上眼睛 傾聽海浪的聲音
Dialogue: 0,0:12:46.36,0:12:48.20,CN,,0,0,0,,	就能回想起祖國
Dialogue: 0,0:12:49.19,0:12:51.26,CN,,0,0,0,,	王子 我一定會...
Dialogue: 0,0:12:58.14,0:12:59.14,CN,,0,0,0,,	什麼東西
Dialogue: 0,0:13:01.69,0:13:03.80,CN,,0,0,0,,	看起來感覺可以焊接
Dialogue: 0,0:13:04.18,0:13:06.05,CN,,0,0,0,,	玉子 能吃了嗎
Dialogue: 0,0:13:06.41,0:13:07.66,CN,,0,0,0,,	再等會吧
Dialogue: 0,0:13:08.38,0:13:09.52,CN,,0,0,0,,	好好吃的樣子
Dialogue: 0,0:13:09.65,0:13:10.43,CN,,0,0,0,,	會嗎
Dialogue: 0,0:13:11.05,0:13:12.43,CN,,0,0,0,,	到底怎麼了
Dialogue: 0,0:13:12.80,0:13:13.71,CN,,0,0,0,,	沒什麼
Dialogue: 0,0:13:13.95,0:13:16.95,CN,,0,0,0,,	我只是覺得那樣會讓玉子煩惱
Dialogue: 0,0:13:17.66,0:13:19.43,CN,,0,0,0,,	這和常盤沒關係吧
Dialogue: 0,0:13:19.59,0:13:20.38,CN,,0,0,0,,	有關係
Dialogue: 0,0:13:20.66,0:13:23.15,CN,,0,0,0,,	你別老纏著玉子
Dialogue: 0,0:13:23.71,0:13:25.26,CN,,0,0,0,,	我又沒纏著她
Dialogue: 0,0:13:25.40,0:13:26.61,CN,,0,0,0,,	明明有
Dialogue: 0,0:13:27.00,0:13:30.35,CN,,0,0,0,,	我說啊 玉子根本就不在乎大路你
Dialogue: 0,0:13:30.50,0:13:32.87,CN,,0,0,0,,	所以你表白也沒有用的
Dialogue: 0,0:13:32.94,0:13:34.47,CN,,0,0,0,,	表...表白
Dialogue: 0,0:13:34.61,0:13:36.41,CN,,0,0,0,,	我又沒那個打算...
Dialogue: 0,0:13:36.47,0:13:37.43,CN,,0,0,0,,	那為什麼
Dialogue: 0,0:13:37.43,0:13:39.33,CN,,0,0,0,,	怎...怎麼說呢
Dialogue: 0,0:13:39.44,0:13:41.71,CN,,0,0,0,,	就是放不下 擔心
Dialogue: 0,0:13:41.83,0:13:43.11,CN,,0,0,0,,	嗯 對 是擔心
Dialogue: 0,0:13:43.50,0:13:47.14,CN,,0,0,0,,	你看 那傢伙天然呆 不時要為她著急
Dialogue: 0,0:13:47.52,0:13:48.26,CN,,0,0,0,,	所以...
Dialogue: 0,0:13:48.39,0:13:50.97,CN,,0,0,0,,	有嗎 沒那回事
Dialogue: 0,0:13:51.42,0:13:52.91,CN,,0,0,0,,	有的
Dialogue: 0,0:13:53.15,0:13:55.78,CN,,0,0,0,,	我從小時候開始就了解她了
Dialogue: 0,0:13:56.86,0:13:58.65,CN,,0,0,0,,	只是都開糕點店而已吧
Dialogue: 0,0:13:58.80,0:14:00.89,CN,,0,0,0,,	我比你更經常和玉子說話
Dialogue: 0,0:14:00.99,0:14:02.43,CN,,0,0,0,,	我也和她說話的
Dialogue: 0,0:14:02.70,0:14:05.09,CN,,0,0,0,,	我比你更了解玉子
Dialogue: 0,0:14:05.29,0:14:08.90,CN,,0,0,0,,	那你知道玉子能游25公尺了嗎
Dialogue: 0,0:14:09.04,0:14:10.52,CN,,0,0,0,,	真的假的 太厲害了
Dialogue: 0,0:14:11.45,0:14:14.84,CN,,0,0,0,,	那你知道玉子戴過眼鏡嗎
Dialogue: 0,0:14:15.52,0:14:16.27,CN,,0,0,0,,	什麼?
Dialogue: 0,0:14:16.62,0:14:18.12,CN,,0,0,0,,	果然不知道吧
Dialogue: 0,0:14:18.24,0:14:21.45,CN,,0,0,0,,	在戴隱形眼鏡之前 戴的是這樣的大眼鏡哦
Dialogue: 0,0:14:22.02,0:14:23.62,CN,,0,0,0,,	這我當然知道
Dialogue: 0,0:14:24.31,0:14:27.11,CN,,0,0,0,,	我和她小學四年級開始就認識了
Dialogue: 0,0:14:27.24,0:14:28.66,CN,,0,0,0,,	那倒也是
Dialogue: 0,0:14:28.77,0:14:33.41,CN,,0,0,0,,	不過 我是餅藏 是玉子最喜歡的餅
Dialogue: 0,0:14:33.41,0:14:37.66,CN,,0,0,0,,	呀 年輕人 救我
Dialogue: 0,0:14:38.53,0:14:40.00,CN,,0,0,0,,	你在幹什麼啊
Dialogue: 0,0:14:42.25,0:14:43.67,CN,,0,0,0,,	還不快退散
Dialogue: 0,0:14:43.67,0:14:46.67,CN,,0,0,0,,	竟敢襲擊高貴的我 簡直可笑
Dialogue: 0,0:14:47.68,0:14:49.58,CN,,0,0,0,,	那你還怕什麼
Dialogue: 0,0:14:49.86,0:14:50.96,CN,,0,0,0,,	去 去
Dialogue: 0,0:14:52.37,0:14:56.04,CN,,0,0,0,,	再說利用小德拉來表白 真是廢得可以
Dialogue: 0,0:14:56.36,0:14:58.40,CN,,0,0,0,,	不是的 這是...
Dialogue: 0,0:14:58.40,0:15:01.01,CN,,0,0,0,,	總之 玉子是我的朋友
Dialogue: 0,0:15:01.43,0:15:02.96,CN,,0,0,0,,	我會保護她的
Dialogue: 0,0:15:04.39,0:15:06.78,CN,,0,0,0,,	想對玉子說什麼是我的自由吧
Dialogue: 0,0:15:09.74,0:15:10.63,CN,,0,0,0,,	吵架嗎
Dialogue: 0,0:15:11.31,0:15:12.44,CN,,0,0,0,,	不...不是啦
Dialogue: 0,0:15:12.54,0:15:14.59,CN,,0,0,0,,	不是什麼吵架
Dialogue: 0,0:15:14.89,0:15:15.82,CN,,0,0,0,,	是嗎
Dialogue: 0,0:15:16.23,0:15:19.33,CN,,0,0,0,,	我感受到你們散發著同樣的香味
Dialogue: 0,0:15:20.03,0:15:21.87,CN,,0,0,0,,	雖然現在有些波瀾起伏
Dialogue: 0,0:15:22.12,0:15:24.49,CN,,0,0,0,,	今後必將變得純淨無暇
Dialogue: 0,0:15:25.02,0:15:28.20,CN,,0,0,0,,	你們的香味擁有同樣的顏色
Dialogue: 0,0:15:28.98,0:15:29.96,CN,,0,0,0,,	不明白
Dialogue: 0,0:15:30.86,0:15:32.46,CN,,0,0,0,,	啊呀 小德拉
Dialogue: 0,0:15:33.56,0:15:34.80,CN,,0,0,0,,	你為什麼會在這裡
Dialogue: 0,0:15:35.12,0:15:37.33,CN,,0,0,0,,	男人的旅途是不需要理由的
Dialogue: 0,0:15:37.71,0:15:39.76,CN,,0,0,0,,	比起這個 我肚子餓了 小姑娘
Dialogue: 0,0:15:40.10,0:15:41.10,CN,,0,0,0,,	有年糕哦
Dialogue: 0,0:15:41.61,0:15:44.15,CN,,0,0,0,,	那真好啊 走吧 小姑娘
Dialogue: 0,0:15:44.45,0:15:45.21,CN,,0,0,0,,	好
Dialogue: 0,0:15:45.46,0:15:47.24,CN,,0,0,0,,	小綠和餅藏也一起來吧
Dialogue: 0,0:15:50.49,0:15:52.98,CN,,0,0,0,,	發什麼呆啊 快點啦
Dialogue: 0,0:15:53.62,0:15:55.90,CN,,0,0,0,,	抱歉 我有點事
Dialogue: 0,0:15:56.27,0:15:57.34,CN,,0,0,0,,	是嗎
Dialogue: 0,0:16:05.59,0:16:07.77,CN,,0,0,0,,	啊 多麼壯觀的太陽
Dialogue: 0,0:16:08.17,0:16:11.54,CN,,0,0,0,,	王子是否也看著同樣的太陽呢
Dialogue: 0,0:16:11.79,0:16:13.83,CN,,0,0,0,,	王子 請稍加等候
Dialogue: 0,0:16:14.19,0:16:15.76,CN,,0,0,0,,	我一定會儘快找到王妃
Dialogue: 0,0:16:25.05,0:16:26.45,CN,,0,0,0,,	可以嗎
Dialogue: 0,0:16:26.84,0:16:27.94,CN,,0,0,0,,	加油 玉子
Dialogue: 0,0:16:28.13,0:16:30.09,CN,,0,0,0,,	做了練習的 一定行
Dialogue: 0,0:16:30.30,0:16:31.67,CN,,0,0,0,,	嗯 也是呢
Dialogue: 0,0:16:31.74,0:16:34.84,CN,,0,0,0,,	好了 不會游的同學套好救生圈了嗎
Dialogue: 0,0:16:35.36,0:16:37.10,CN,,0,0,0,,	吃不消的話要馬上說出來哦
Dialogue: 0,0:16:37.40,0:16:39.09,CN,,0,0,0,,	男生結束了嗎
Dialogue: 0,0:16:39.23,0:16:41.24,CN,,0,0,0,,	大家都將錯就錯了
Dialogue: 0,0:16:41.24,0:16:42.99,CN,,0,0,0,,	長泳真可怕
Dialogue: 0,0:16:42.99,0:16:44.20,CN,,0,0,0,,	玉子
Dialogue: 0,0:16:44.20,0:16:46.64,CN,,0,0,0,,	哇 夠嗆的樣子
Dialogue: 0,0:16:46.91,0:16:47.97,CN,,0,0,0,,	玉子 走吧
Dialogue: 0,0:16:48.24,0:16:49.63,CN,,0,0,0,,	啊...嗯
Dialogue: 0,0:16:51.86,0:16:52.69,CN,,0,0,0,,	加油啊
Dialogue: 0,0:16:53.07,0:16:55.65,CN,,0,0,0,,	你能游25公尺了吧
Dialogue: 0,0:16:56.64,0:16:57.20,CN,,0,0,0,,	嗯
Dialogue: 0,0:17:02.80,0:17:04.04,CN,,0,0,0,,	說一下怎麼了
Dialogue: 0,0:17:09.63,0:17:10.89,CN,,0,0,0,,	加油 玉子
Dialogue: 0,0:17:11.57,0:17:13.69,CN,,0,0,0,,	小玉 加油
Dialogue: 0,0:17:14.17,0:17:17.93,CN,,0,0,0,,	神奈 比起游泳你更像是漂浮著
Dialogue: 0,0:17:18.48,0:17:20.15,CN,,0,0,0,,	我很擅長的長泳的
Dialogue: 0,0:17:20.60,0:17:21.27,CN,,0,0,0,,	是嗎
Dialogue: 0,0:17:24.43,0:17:26.19,CN,,0,0,0,,	好樣的 還有半程
Dialogue: 0,0:17:30.33,0:17:31.49,CN,,0,0,0,,	那是餅藏?
Dialogue: 0,0:17:31.75,0:17:32.39,CN,,0,0,0,,	是啊
Dialogue: 0,0:17:33.23,0:17:35.87,CN,,0,0,0,,	羨慕啊 游完的人可輕鬆了
Dialogue: 0,0:17:36.83,0:17:39.13,CN,,0,0,0,,	那麼 我們走吧 小綠
Dialogue: 0,0:17:40.05,0:17:43.14,CN,,0,0,0,,	吶 玉子覺得大路怎麼樣
Dialogue: 0,0:17:44.22,0:17:45.09,CN,,0,0,0,,	什麼怎麼樣
Dialogue: 0,0:17:45.32,0:17:46.53,CN,,0,0,0,,	就是說...
Dialogue: 0,0:17:47.13,0:17:48.36,CN,,0,0,0,,	青梅竹馬哦
Dialogue: 0,0:17:48.63,0:17:50.20,CN,,0,0,0,,	應該說是糕點店同行
Dialogue: 0,0:17:50.36,0:17:51.52,CN,,0,0,0,,	我想也是
Dialogue: 0,0:17:51.60,0:17:53.26,CN,,0,0,0,,	那我呢?
Dialogue: 0,0:17:53.84,0:17:54.74,CN,,0,0,0,,	小綠?
Dialogue: 0,0:17:54.98,0:17:57.59,CN,,0,0,0,,	小綠嘛 最喜歡了
Dialogue: 0,0:18:00.08,0:18:00.74,CN,,0,0,0,,	謝謝
Dialogue: 0,0:18:00.74,0:18:02.77,CN,,0,0,0,,	救命
Dialogue: 0,0:18:02.77,0:18:03.59,CN,,0,0,0,,	小德拉
Dialogue: 0,0:18:05.86,0:18:08.79,CN,,0,0,0,,	真是的 人一旦變得像我這樣高貴
Dialogue: 0,0:18:08.79,0:18:10.54,CN,,0,0,0,,	就會有一幫傢伙糾纏不休
Dialogue: 0,0:18:13.01,0:18:14.60,CN,,0,0,0,,	小德拉很受歡迎呢
Dialogue: 0,0:18:14.83,0:18:16.36,CN,,0,0,0,,	看不出來
Dialogue: 0,0:18:18.56,0:18:20.34,CN,,0,0,0,,	小玉 小玉
Dialogue: 0,0:18:20.68,0:18:22.20,CN,,0,0,0,,	快要放煙火了哦
Dialogue: 0,0:18:22.44,0:18:24.00,CN,,0,0,0,,	大家都出去了哦
Dialogue: 0,0:18:24.53,0:18:27.03,CN,,0,0,0,,	小玉 你說很期待的
Dialogue: 0,0:18:27.03,0:18:28.29,CN,,0,0,0,,	嗯 我醒著呢
Dialogue: 0,0:18:33.55,0:18:35.22,CN,,0,0,0,,	精疲力盡呢
Dialogue: 0,0:18:38.49,0:18:39.30,CN,,0,0,0,,	神奈?
Dialogue: 0,0:18:41.99,0:18:43.04,CN,,0,0,0,,	在海裡嗎
Dialogue: 0,0:18:43.62,0:18:44.51,CN,,0,0,0,,	會淹死哦
Dialogue: 0,0:18:47.28,0:18:49.60,CN,,0,0,0,,	是煙火哦 史織 神奈
Dialogue: 0,0:18:49.74,0:18:50.34,CN,,0,0,0,,	起來了
Dialogue: 0,0:18:50.67,0:18:53.40,CN,,0,0,0,,	出發囉 你們倆在發什麼呆呢
Dialogue: 0,0:18:54.58,0:18:56.04,CN,,0,0,0,,	小玉好厲害啊
Dialogue: 0,0:18:56.43,0:18:56.88,CN,,0,0,0,,	嗯
Dialogue: 0,0:19:00.83,0:19:01.54,CN,,0,0,0,,	欸 為什麼?
Dialogue: 0,0:19:02.30,0:19:03.26,CN,,0,0,0,,	沒什麼
Dialogue: 0,0:19:03.26,0:19:06.03,CN,,0,0,0,,	有話要對她說的話 就儘管去吧
Dialogue: 0,0:19:07.87,0:19:09.15,CN,,0,0,0,,	不用了 沒什麼要說的
Dialogue: 0,0:19:10.02,0:19:10.70,CN,,0,0,0,,	為什麼
Dialogue: 0,0:19:10.96,0:19:12.58,CN,,0,0,0,,	和你沒關係吧
Dialogue: 0,0:19:13.08,0:19:14.70,CN,,0,0,0,,	嘛 也是
Dialogue: 0,0:19:14.88,0:19:16.60,CN,,0,0,0,,	哇 快看快看
Dialogue: 0,0:19:18.54,0:19:20.20,CN,,0,0,0,,	好大呀
Dialogue: 0,0:19:20.42,0:19:23.30,CN,,0,0,0,,	快去那邊 能看得更大呢
Dialogue: 0,0:19:23.30,0:19:24.84,CN,,0,0,0,,	小玉 等等我
Dialogue: 0,0:19:28.94,0:19:30.12,CN,,0,0,0,,	常盤也去吧
Dialogue: 0,0:19:31.31,0:19:33.13,CN,,0,0,0,,	和我在一起也沒用吧
Dialogue: 0,0:19:33.65,0:19:35.87,CN,,0,0,0,,	放心吧 我不會再去表白...
Dialogue: 0,0:19:36.19,0:19:40.46,CN,,0,0,0,,	不...我也沒打算這麼做
Dialogue: 0,0:19:40.94,0:19:41.64,CN,,0,0,0,,	為什麼
Dialogue: 0,0:19:41.71,0:19:44.61,CN,,0,0,0,,	因為說了也沒用
Dialogue: 0,0:19:45.04,0:19:49.15,CN,,0,0,0,,	我本來就沒打算說什麼...
Dialogue: 0,0:19:49.23,0:19:49.89,CN,,0,0,0,,	所以...
Dialogue: 0,0:19:50.32,0:19:51.58,CN,,0,0,0,,	啊 在這裡啊
Dialogue: 0,0:19:51.71,0:19:53.22,CN,,0,0,0,,	小綠 小綠
Dialogue: 0,0:19:53.35,0:19:55.62,CN,,0,0,0,,	在那邊發現了個好地方哦
Dialogue: 0,0:19:56.06,0:19:57.94,CN,,0,0,0,,	好地方哦 好地方
Dialogue: 0,0:19:57.94,0:19:58.84,CN,,0,0,0,,	來了來了
Dialogue: 0,0:19:59.25,0:20:00.49,CN,,0,0,0,,	大路你也來吧
Dialogue: 0,0:20:01.11,0:20:02.03,CN,,0,0,0,,	我就算了
Dialogue: 0,0:20:02.23,0:20:03.84,CN,,0,0,0,,	餅藏也來呀
Dialogue: 0,0:20:05.74,0:20:06.96,CN,,0,0,0,,	玉子也叫你去呢
Dialogue: 0,0:20:08.43,0:20:09.47,CN,,0,0,0,,	{\fnLihei Pro\fs44}囉{\r}嗦
Dialogue: 0,0:20:15.51,0:20:17.06,CN,,0,0,0,,	玉屋～
Dialogue: 0,0:20:17.75,0:20:18.89,CN,,0,0,0,,	是我家的店鋪
Dialogue: 0,0:20:19.09,0:20:20.81,CN,,0,0,0,,	玉屋～
Dialogue: 0,0:20:21.10,0:20:24.67,CN,,0,0,0,,	玉屋～的糕點請多關照
Dialogue: 0,0:20:25.09,0:20:27.01,CN,,0,0,0,,	玉屋～
Dialogue: 0,0:20:27.01,0:20:29.15,CN,,0,0,0,,	的美味的糕點
Dialogue: 0,0:20:29.84,0:20:31.02,CN,,0,0,0,,	你是傻瓜嗎
Dialogue: 0,0:20:32.97,0:20:34.83,CN,,0,0,0,,	玉屋～
Dialogue: 0,0:20:35.03,0:20:37.47,CN,,0,0,0,,	RICE CAKE Oh!ZEE也請多關照
Dialogue: 0,0:20:39.77,0:20:40.90,CN,,0,0,0,,	很有趣吧
Dialogue: 0,0:20:44.24,0:20:46.66,CN,,0,0,0,,	戀愛的煙火與心靈的花朵
Dialogue: 0,0:20:47.23,0:20:49.77,CN,,0,0,0,,	盛夏夜的夢與初開的情竇
Dialogue: 0,0:20:50.26,0:20:52.82,CN,,0,0,0,,	但願它們永不消逝
Dialogue: 0,0:21:00.09,0:21:00.93,CN,,0,0,0,,	小德拉
Dialogue: 0,0:21:01.95,0:21:02.68,CN,,0,0,0,,	好像...
Dialogue: 0,0:21:02.77,0:21:03.67,CN,,0,0,0,,	有危險
Dialogue: 0,0:21:03.76,0:21:04.83,CN,,0,0,0,,	我去救他
Dialogue: 0,0:21:17.18,0:21:18.16,CN,,0,0,0,,	作業做了沒?
Dialogue: 0,0:21:18.35,0:21:20.23,CN,,0,0,0,,	{\fnLihei Pro\fs44}囉{\r}嗦 我在做啦
Dialogue: 0,0:21:20.48,0:21:22.39,CN,,0,0,0,,	又敷衍了事
Dialogue: 0,0:21:22.51,0:21:24.90,CN,,0,0,0,,	要是出什麼問題我是絕對不會幫忙的哦
Dialogue: 0,0:21:25.53,0:21:27.52,CN,,0,0,0,,	我又沒拜託你
Dialogue: 0,0:21:29.73,0:21:31.13,CN,,0,0,0,,	我走了哦
Dialogue: 0,0:21:32.01,0:21:33.37,CN,,0,0,0,,	今天也好熱啊
Dialogue: 0,0:21:46.28,0:21:47.19,CN,,0,0,0,,	笨蛋
Dialogue: 0,0:23:25.84,0:23:28.12,CN,,0,0,0,,	夏天得吃爽滑的糯米糰子呢
Dialogue: 0,0:23:28.24,0:23:29.09,CN,,0,0,0,,	我是玉子
Dialogue: 0,0:23:29.31,0:23:31.53,CN,,0,0,0,,	蘸上涼糖水也很好吃哦
Dialogue: 0,0:23:31.81,0:23:34.53,CN,,0,0,0,,	「晶瑩白玉湯 入口香甜微有異 應為留殘糖」
Dialogue: 0,0:23:34.73,0:23:36.96,CN,,0,0,0,,	這是一個叫做高浜虛子的人寫的俳句
Dialogue: 0,0:23:36.96,0:23:39.77,CN,,0,0,0,,	下集會吃到什麼樣的糕點呢
