Dialogue: 0,0:00:01.25,0:00:03.09,JP,,0,0,0,,	明日 クラス替え発表でしょう
Dialogue: 0,0:00:03.21,0:00:05.26,JP,,0,0,0,,	もう授業始まるのかな
Dialogue: 0,0:00:06.99,0:00:07.80,JP,,0,0,0,,	そうよ
Dialogue: 0,0:00:08.43,0:00:09.79,JP,,0,0,0,,	クラス一緒だといいね
Dialogue: 0,0:00:09.83,0:00:10.59,JP,,0,0,0,,	ねえ
Dialogue: 0,0:00:07.88,0:00:10.57,JP,,0,0,0,,{\pos(640,80)}桜満開 春爛漫
Dialogue: 0,0:00:11.31,0:00:13.95,JP,,0,0,0,,	芽吹く季節に浮き立つ心
Dialogue: 0,0:00:15.32,0:00:16.95,JP,,0,0,0,,	なぜだ
Dialogue: 0,0:00:16.95,0:00:20.03,JP,,0,0,0,,	少し飛んだだけで こんなに疲れるとは
Dialogue: 0,0:00:20.24,0:00:22.32,JP,,0,0,0,,	やっぱ 暖かくなってきたのに
Dialogue: 0,0:00:22.63,0:00:24.30,JP,,0,0,0,,	飛べないと旅立てない
Dialogue: 0,0:00:24.84,0:00:25.94,JP,,0,0,0,,	太ったからだよ
Dialogue: 0,0:00:25.96,0:00:28.26,JP,,0,0,0,,	娘 この餅美味いな
Dialogue: 0,0:00:28.57,0:00:29.70,JP,,0,0,0,,	春の味がする
Dialogue: 0,0:00:30.00,0:00:31.13,JP,,0,0,0,,	桜餅だよ
Dialogue: 0,0:00:31.29,0:00:33.13,JP,,0,0,0,,{\pos(640,80)}じーちゃん 桜餅20ね
Dialogue: 0,0:00:33.37,0:00:34.35,JP,,0,0,0,,{\pos(640,80)}あいよ
Dialogue: 0,0:00:32.14,0:00:35.06,JP,,0,0,0,,	デラちゃん 最初に会った時と全然違うよ
Dialogue: 0,0:00:35.30,0:00:39.15,JP,,0,0,0,,	焼く前と焼いた後のお餅くらい違うからいい感じ
Dialogue: 0,0:00:40.31,0:00:41.50,JP,,0,0,0,,	たまこ もういいぞ
Dialogue: 0,0:00:41.62,0:00:43.22,JP,,0,0,0,,	はい あとよろしくね
Dialogue: 0,0:00:48.37,0:00:50.39,JP,,0,0,0,,	飛べ 飛ぶのだ 俺
Dialogue: 0,0:00:50.57,0:00:52.33,JP,,0,0,0,,	何だあれ 鳥か
Dialogue: 0,0:00:52.67,0:00:53.94,JP,,0,0,0,,	落ちそうじゃない
Dialogue: 0,0:00:54.75,0:00:55.90,JP,,0,0,0,,	あ 力尽きた
Dialogue: 0,0:00:56.18,0:00:57.42,JP,,0,0,0,,	落ちてる 落ちてる
Dialogue: 0,0:01:06.99,0:01:08.49,JP,,0,0,0,,	思ったより重かった
Dialogue: 0,0:01:19.15,0:01:21.74,JP,,0,0,0,,	桜満開 春爛漫
Dialogue: 0,0:01:22.67,0:01:26.48,JP,,0,0,0,,	空から落ちたら 恋に落ちたぜ
Dialogue: 0,0:01:26.81,0:01:27.52,JP,,0,0,0,,	鳥
Dialogue: 0,0:02:59.08,0:02:59.98,JP,,0,0,0,,	あった
Dialogue: 0,0:03:00.05,0:03:02.05,JP,,0,0,0,,	C組ではないと
Dialogue: 0,0:03:02.34,0:03:03.97,JP,,0,0,0,,	私A組
Dialogue: 0,0:03:04.94,0:03:06.23,JP,,0,0,0,,	私もA組だ
Dialogue: 0,0:03:07.60,0:03:08.83,JP,,0,0,0,,	私B組だ
Dialogue: 0,0:03:08.91,0:03:10.41,JP,,0,0,0,,	えっ うそ
Dialogue: 0,0:03:10.95,0:03:11.90,JP,,0,0,0,,	なんで
Dialogue: 0,0:03:12.29,0:03:15.45,JP,,0,0,0,,	みどりちゃんと違うクラスになったことなかったのに
Dialogue: 0,0:03:16.12,0:03:17.18,JP,,0,0,0,,	仕方ないじゃん
Dialogue: 0,0:03:20.10,0:03:21.19,JP,,0,0,0,,	違うクラスだ
Dialogue: 0,0:03:24.06,0:03:26.30,JP,,0,0,0,,	またたまこと別のクラスだ
Dialogue: 0,0:03:27.89,0:03:30.04,JP,,0,0,0,,	朝霧さんと同じクラスですよ
Dialogue: 0,0:03:30.31,0:03:31.50,JP,,0,0,0,,	バドミントン部の
Dialogue: 0,0:03:31.74,0:03:32.39,JP,,0,0,0,,	うん
Dialogue: 0,0:03:40.17,0:03:41.66,JP,,0,0,0,,	嫌われちゃってるのかな
Dialogue: 0,0:03:48.53,0:03:50.19,JP,,0,0,0,,	担任の八木です
Dialogue: 0,0:03:50.49,0:03:53.56,JP,,0,0,0,,	先月結婚したばかりで 張り切ってます
Dialogue: 0,0:03:54.78,0:03:55.94,JP,,0,0,0,,	おめでとうございます
Dialogue: 0,0:03:55.94,0:03:57.05,JP,,0,0,0,,	ありがとう
Dialogue: 0,0:03:57.29,0:04:01.89,JP,,0,0,0,,	みなさんも 新たな気持ちで張り切っていきましょう
Dialogue: 0,0:04:04.69,0:04:06.13,JP,,0,0,0,,	では 自己紹介
Dialogue: 0,0:04:06.49,0:04:07.39,JP,,0,0,0,,	朝霧さんから
Dialogue: 0,0:04:10.36,0:04:11.71,JP,,0,0,0,,	朝霧史織です
Dialogue: 0,0:04:12.29,0:04:14.08,JP,,0,0,0,,	バドミントン部に所属しています
Dialogue: 0,0:04:14.55,0:04:15.95,JP,,0,0,0,,	よろしくお願いします
Dialogue: 0,0:04:16.40,0:04:17.31,JP,,0,0,0,,	ありがとう
Dialogue: 0,0:04:17.74,0:04:19.34,JP,,0,0,0,,	それじゃ 次 井上さん
Dialogue: 0,0:04:19.59,0:04:20.25,JP,,0,0,0,,	はい
Dialogue: 0,0:04:23.25,0:04:25.05,JP,,0,0,0,,	次は北白川さん
Dialogue: 0,0:04:25.38,0:04:26.08,JP,,0,0,0,,	はい
Dialogue: 0,0:04:26.15,0:04:27.21,JP,,0,0,0,,	北白川
Dialogue: 0,0:04:27.37,0:04:29.78,JP,,0,0,0,,	北白川たまこです
Dialogue: 0,0:04:30.16,0:04:34.01,JP,,0,0,0,,	家はうさぎ山商店街にある「玉屋」というお餅屋さんです
Dialogue: 0,0:04:34.25,0:04:36.15,JP,,0,0,0,,	今は桜餅が美味しいです
Dialogue: 0,0:04:36.65,0:04:38.56,JP,,0,0,0,,	よかったら 食べてみてください
Dialogue: 0,0:04:39.12,0:04:40.47,JP,,0,0,0,,	よろしくお願いします
Dialogue: 0,0:04:42.68,0:04:43.55,JP,,0,0,0,,	バトン部です
Dialogue: 0,0:04:43.72,0:04:45.03,JP,,0,0,0,,	牧野かんなです
Dialogue: 0,0:04:45.20,0:04:47.80,JP,,0,0,0,,	目測が得意で 直角が大好きです
Dialogue: 0,0:04:48.10,0:04:49.99,JP,,0,0,0,,	家の梁に興味があります
Dialogue: 0,0:04:50.20,0:04:52.83,JP,,0,0,0,,	今は後ろのロッカーを直したいと思っています
Dialogue: 0,0:04:53.47,0:04:54.53,JP,,0,0,0,,	バトン部です
Dialogue: 0,0:04:55.39,0:04:57.16,JP,,0,0,0,,	新しいクラス どうだった
Dialogue: 0,0:04:57.42,0:04:58.66,JP,,0,0,0,,	大路と一緒だった
Dialogue: 0,0:04:59.14,0:05:00.03,JP,,0,0,0,,	たまこたちは
Dialogue: 0,0:05:00.91,0:05:03.51,JP,,0,0,0,,	先生張り切ってるし 楽しいクラスになりそう
Dialogue: 0,0:05:04.21,0:05:06.81,JP,,0,0,0,,	ロッカーが修理できたら 更にいいクラス
Dialogue: 0,0:05:07.25,0:05:08.22,JP,,0,0,0,,	何だそれ
Dialogue: 0,0:05:09.68,0:05:12.86,JP,,0,0,0,,	後ろのロッカー壊れてて 修理したいんだけど
Dialogue: 0,0:05:15.02,0:05:17.15,JP,,0,0,0,,	朝 早く来て直しちゃおうかな
Dialogue: 0,0:05:18.62,0:05:20.25,JP,,0,0,0,,	やめて やめて
Dialogue: 0,0:05:25.72,0:05:27.42,JP,,0,0,0,,	バトンで釘打てるかな
Dialogue: 0,0:05:28.00,0:05:30.10,JP,,0,0,0,,	いや 打たないから普通
Dialogue: 0,0:05:30.57,0:05:32.07,JP,,0,0,0,,	これ この映画
Dialogue: 0,0:05:32.50,0:05:33.25,JP,,0,0,0,,	いいね
